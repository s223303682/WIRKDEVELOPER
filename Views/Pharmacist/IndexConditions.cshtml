@model IEnumerable<WIRKDEVELOPER.Models.Admin.AnConditions>
@{

    Layout = "~/Views/Shared/Pharmacy.cshtml";
}


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Conditions</h2>
            </div>
            <div class="col-6 text-end">
            <a onclick="history.back()" class="btn btn-primary"><i class="bi bi-plus-circle"></i>BACK</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            @*<table class="table table-bordered table-striped" style="width:100%">*@
            <table class="table table-info table-hover">

                <thead>
                    <tr>
                        <th>
                            Conditions
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var condi in Model)
                    {
                        <tr>
                            <td width="20%">@condi.Diagnose</td>



                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Screenings created yet</p>
        }

    </div>


