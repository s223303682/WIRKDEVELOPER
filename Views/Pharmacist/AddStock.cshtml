@model WIRKDEVELOPER.Models.PharmStock
@{

    Layout = "~/Views/Shared/Pharmacy.cshtml";
}

<div class="card w-75">
    <div class="card-body ">
        <div class="card-header bg-primary">

            <h3 class="card-title text-white mt-2" id="exampleModalLabel">Medication</h3>
        </div>
        <form method="post" asp-action="AddStock">
            <div class="border p-3 #FBD603">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*validation*@

                <div class="row" id="users">
                    <div class="form-group">

                        <div class="col-md-4">

                            <h4><label asp-for="Date"></label></h4>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>

                        </div>
                        <div class="row">
                            <div id="medicationFieldsContainer">
                                @for (int i = 0; i < Model.MedicationEntries.Count; i++)
                                {
                                    <div class="form-row">
                                        <div class="col-md-4">
                                            <h4><label asp-for="MedicationEntries[@i].PharmacyMedicationID"></label></h4>
                                            <select asp-for="MedicationEntries[@i].PharmacyMedicationID" class="form-control" asp-items="@ViewBag.getMedication" required>
                                                <option selected disabled>--Select Medication--</option>
                                            </select>
                                            <span asp-validation-for="MedicationEntries[@i].PharmacyMedicationID" class="text-danger"></span>
                                        </div>

                                        <div class="col-md-4">
                                            <h4><label asp-for="MedicationEntries[@i].QuantityOrdered"></label></h4>
                                            <input asp-for="MedicationEntries[@i].QuantityOrdered" class="form-control box mb-2" type="text" placeholder="Enter Quantity" />
                                            <span asp-validation-for="MedicationEntries[@i].QuantityOrdered" class="text-danger"></span>
                                        </div>
                                    </div>
                                }
                            </div>

                            <button type="button" class="btn btn-primary mt-2" onclick="addFields()">Add Another Set</button>


                           
                            <div>
                                <div class="form-group row">
                                    <div class="col-4 offset-9 row">
                                        <div class="col">
                                            <input type="submit" class="btn btn-info w-75 bi bi-arrow-left-circle" value="SAVE" />

                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

            <script src="~/css/JavaScript.js"></script>
        </form>
    </div>
</div>
@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    function addFields() {
        // Get the container where fields will be added
        var container = document.getElementById('medicationFieldsContainer');

        // Get the first row to clone
        var firstRow = container.querySelector('.form-row');

        // Clone the first row
        var newRow = firstRow.cloneNode(true);

        // Clear the values of the cloned inputs
        newRow.querySelectorAll('input, select').forEach(function (element) {
            element.value = '';
            element.removeAttribute('id'); // Remove the ID to avoid conflicts
        });

        // Append the cloned row to the container
        container.appendChild(newRow);
    }
</script>
}

