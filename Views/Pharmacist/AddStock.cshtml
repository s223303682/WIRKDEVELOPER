@model WIRKDEVELOPER.Models.PharmStock
@{

    Layout = "~/Views/Shared/Pharmacy.cshtml";
}

<div class="card w-75">
    <div class="card-body ">
        <div class="card-header bg-primary">

            <h3 class="card-title text-white mt-2" id="exampleModalLabel">Medication</h3>
        </div>
        <form method="post" asp-action="AddStock">
            <div class="border p-3 #FBD603">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*validation*@

                <div class="row">

                    <div class="form-group">


                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <h4><label asp-for="QuantityOrdered"></label></h4>@*These names come from our properties in the model *@
                                    <input asp-for="QuantityOrdered" class="form-control box mb-2" type="text" placeholder="select" />
                                    <span asp-validation-for=" QuantityOrdered" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-12">
                                <div class="row">

                                    <div class="col-md-2">
                                        <h4><label asp-for="QuantityRecieved"></label></h4>

                                        <input asp-for="QuantityRecieved" class="form-control box mb-2" type="text" placeholder="select" />
                                        <span asp-validation-for="QuantityRecieved" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">

                                    <div class="col-md-2">
                                        <h4><label asp-for="Date"></label></h4>
                                        <input asp-for="Date" class="form-control" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">

                                    <div class="col-md-2">
                                        @* <h4><label asp-for="Strength"></label></h4>
                                        <input asp-for="Strength" class="form-control box mb-2" type="text" placeholder="select" />
                                        <span asp-validation-for="Strength" class="text-danger"></span> *@
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group row">
                                    <div class="col-4 offset-9 row">
                                        <div class="col">
                                            <input type="submit" class="btn btn-info w-75 bi bi-arrow-left-circle" value="SAVE" />

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

        </form>
    </div>
</div>

