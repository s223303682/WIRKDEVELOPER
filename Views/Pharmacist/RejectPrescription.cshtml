@model Prescription

@{
    Layout = "~/Views/Shared/Pharmacy.cshtml";
}
<h1>Reject Prescription</h1>

<form asp-action="RejectPrescription" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PrescriptionID" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IDNumber"></label>
        <input asp-for="IDNumber" class="form-control" />
        <span asp-validation-for="IDNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prescriber"></label>
        <input asp-for="Prescriber" class="form-control" />
        <span asp-validation-for="Prescriber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Urgent"></label>
        <input asp-for="Urgent" class="form-control" />
        <span asp-validation-for="Urgent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" onchange="toggleReasonInput(this)">
            <option value="Dispensed">Dispense</option>
            <option value="Rejected">Reject</option>
        </select>
    </div>

    <div class="form-group" id="reasonInput">
        <label for="IgnoreReason">Reason for Rejection</label>
        <textarea asp-for="IgnoreReason" class="form-control"></textarea>
        <span asp-validation-for="IgnoreReason" class="text-danger"></span>
    </div>


    <h3>Medications</h3>
    @for (int i = 0; i < Model.PrescriptionMedications.Count; i++)
    {
        <div class="form-group">
            <label>Medication Name</label>
            <input type="text" name="PrescriptionMedications[@i].PharmacyMedicationID" class="form-control" value="@Model.PrescriptionMedications[i].PharmacyMedicationID" readonly />
            <label>Quantity</label>
            <input type="number" name="PrescriptionMedications[@i].Quantity" class="form-control" value="@Model.PrescriptionMedications[i].Quantity" readonly />
            <label>Instructions</label>
            <input type="text" name="PrescriptionMedications[@i].Instructions" class="form-control" value="@Model.PrescriptionMedications[i].Instructions" readonly />
        </div>
    }

    <button type="submit" class="btn btn-primary">Reject Prescription</button>
</form>

@section Scripts {
    <script>
        function toggleReasonInput(select) {
            const reasonInput = document.getElementById("reasonInput");
            if (select.value === "Rejected") {
                reasonInput.style.display = "block";
            } else {
                reasonInput.style.display = "none";
            }
        }
    </script>
}
