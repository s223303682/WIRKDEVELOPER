@model IEnumerable<WIRKDEVELOPER.Models.OrderCreate>
@{

    Layout = "~/Views/Shared/Pharmacy.cshtml";
}

    <h1>Orders List</h1>

    <p>
        <a asp-action="CreateOrder" class="btn btn-primary">Create New Order</a>
    </p>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        Patient

                    </th>
                    <th>
                        Medication
                       
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Urgent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        Action
                    </th>
                
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                  if (order.Urgent.ToLower() == "yes")
                  {
                    <tr scope="row" style="background-color:red;">
                        <td>
                            @order.Date
                        </td>
                        <td>
                            @order.Patient.PatientName
                        </td>
                        <td>
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                <ul>
                                    @foreach (var medication in order.OrderItems)
                                    {
                                        <li>
                                            @medication.PharmacyMedication.PharmacyMedicationName - Quantity: @medication.Quantity, Instructions: @medication.Instructions
                                        </li>
                                    }
                                </ul>
                            }
                        </td>

                       
                        <td>
                            @order.Urgent
                        </td>
                        <td>
                            @order.Status
                        </td>
                       
                        <td>
                            <a asp-controller="Pharmacist" asp-action="UpdateOrder" asp-route-id="@order.AnOrderID" class="btn btn-primary">Despense</a>
                           
                        </td>
                    </tr>
                  }
                  else
                  {
                    <tr>
                        <td>
                            @order.Date
                        </td>
                        <td>
                            @order.Patient.PatientName
                        </td>
                        <td>
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                <ul>
                                    @foreach (var medication in order.OrderItems)
                                    {
                                        <li>
                                            @medication.PharmacyMedication.PharmacyMedicationName - Quantity: @medication.Quantity, Instructions: @medication.Instructions
                                        </li>
                                    }
                                </ul>
                            }
                        </td>

              
                        <td>
                            @order.Urgent
                        </td>
                        <td>
                            @order.Status
                 
                        <td>
                            <a asp-controller="Pharmacist" asp-action="UpdateOrder" asp-route-id="@order.AnOrderID" class="btn btn-primary">Dispense</a>
                          
                        </td>
                    </tr>
                  }
                
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Orders created yet</p>
    }



