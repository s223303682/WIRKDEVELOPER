@model WIRKDEVELOPER.Models.PrescriptionViewModel

@{
    Layout = "~/Views/Shared/Pharmacy.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Prescription</title>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const medications = JSON.parse('@Html.Raw(ViewBag.Medications)');
            const existingMedications = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Medications));

            function createMedicationField(index, medication) {
                const medicationDiv = document.createElement('div');
                medicationDiv.classList.add('form-group');

                const medicationOptions = medications.map(med =>
                    `<option value="${med.PharmacyMedicationID}" ${medication.PharmacyMedicationID == med.PharmacyMedicationID ? "selected" : ""}>${med.PharmacyMedicationName}</option>`
                ).join('');

                medicationDiv.innerHTML = `
                            <h4>Medication ${index + 1}</h4>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="Medications_${index}__PharmacyMedicationID">Medication</label>
                                        <select name="Medications[${index}].PharmacyMedicationID" id="Medications_${index}__PharmacyMedicationID" class="form-control">
                                            <option value="" disabled>--select medication--</option>
                                            ${medicationOptions}
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="Medications_${index}__Quantity">Quantity</label>
                                        <input type="number" name="Medications[${index}].Quantity" id="Medications_${index}__Quantity" class="form-control" value="${medication.Quantity}" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="Medications_${index}__Instructions">Instructions</label>
                                        <input type="text" name="Medications[${index}].Instructions" id="Medications_${index}__Instructions" class="form-control" value="${medication.Instructions}" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                            </div>
                        `;
                return medicationDiv;
            }

            function addMedicationField(medication = {}) {
                const medicationContainer = document.getElementById('medicationContainer');
                const index = medicationContainer.children.length;
                const medicationDiv = createMedicationField(index, medication);
                medicationContainer.appendChild(medicationDiv);
            }

            // Load existing medications
            existingMedications.forEach((medication, index) => {
                addMedicationField(medication);
            });

            // Attach event listener to the button for adding new medications
            document.getElementById('addMedicationButton').addEventListener('click', function () {
                addMedicationField();
            });
        });
    </script>
</head>
<body>
    <div class="row">
        <div class="col-1">
            <a asp-action="PrescriptionList" class="btn btn-primary">List</a>
        </div>
    </div>
    <h1>Update Prescription</h1>
    <form asp-controller="Pharmacist" asp-action="UpdatePrescription" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       @*  @Html.HiddenFor(model => model.PrescriptionViewModelID) *@
        <input type="hidden" asp-for="PrescriptionViewModelID" />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <input asp-for="Gender" class="form-control" readonly />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Dynamic Medication Fields -->
        <div id="medicationContainer"></div>
        <button type="button" id="addMedicationButton" class="btn btn-primary">Add Medication</button>

        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" class="form-control" readonly />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Prescriber"></label>
                    <input asp-for="Prescriber" class="form-control" readonly />
                    <span asp-validation-for="Prescriber" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Urgent"></label>
                    <select asp-for="Urgent" class="form-control" readonly>
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
                    <span asp-validation-for="Urgent" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="Despense">Despense</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>

        <input type="submit" value="Update" class="btn btn-primary" />
    </form>
</body>
</html>
