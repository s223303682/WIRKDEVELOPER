@model Prescription

@{
    Layout = "~/Views/Shared/Pharmacy.cshtml";
}

<h1>Update Prescription</h1>

<form asp-action="UpdatePrescription" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PrescriptionID" />

    <div class="card mb-4">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Prescriber"></label>
                <input asp-for="Prescriber" class="form-control" />
                <span asp-validation-for="Prescriber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Urgent"></label>
                <input asp-for="Urgent" class="form-control" />
                <span asp-validation-for="Urgent" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Dispensed">Dispensed</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <h3>Medications</h3>
        @for (int i = 0; i < Model.PrescriptionMedications.Count; i++)
        {
            <div class="form-group">
                <label>Medication Name</label>
                <input type="text" name="PrescriptionMedications[@i].PharmacyMedicationID" class="form-control" value="@Model.PrescriptionMedications[i].PharmacyMedicationID" readonly />
                <label>Quantity</label>
                <input type="number" name="PrescriptionMedications[@i].Quantity" class="form-control" value="@Model.PrescriptionMedications[i].Quantity" readonly />
                <label>Instructions</label>
                <input type="text" name="PrescriptionMedications[@i].Instructions" class="form-control" value="@Model.PrescriptionMedications[i].Instructions" readonly />
            </div>
          
        }
    </div>

    <button type="submit" class="btn btn-primary">Update Prescription</button>
    <a asp-controller="Pharmacist" asp-action="ViewPatientHistoryByDetails" asp-route-name="@Model.Name" asp-route-surname="@Model.Surname" asp-route-email="@Model.Email" asp-route-idNumber="@Model.IDNumber" class="btn btn-primary">
        View History
    </a>

    <br />
    <br />

    </div>
    </div>

    </div>
</form>
