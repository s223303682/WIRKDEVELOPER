@model IEnumerable<WIRKDEVELOPER.Models.StockReceived>
@{

    Layout = "~/Views/Shared/Pharmacy.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap4.min.css" />
</head>
<div id="Header" class="bg-info container">
    <h2 class="m-1 pt-4 text-center text-white">List of your orders</h2>
</div>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">STOCK RECORDS</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pharmacist" asp-action="ReceivedMedication" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Back</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        @*<table class="table table-bordered table-striped" style="width:100%">*@
        <table class="table table-sm table-hover">

            <thead class="table-secondary">
                <tr>
                    <th>
                        Medication
                    </th>
                    <th>
                        Quantity Recieved
                    </th>
                    @* <th>
                        Stock in hand
                    </th>
                    <th>
                        Stock level
                    </th> *@
                   @*  <th>
                        Date
                    </th> *@
                    <th>
                        Status
                    </th>



                </tr>
            </thead>

            <tbody>
                @foreach (var pharmstock in Model)
                {
                    <tr scope="row">
                        <td width="20%">@pharmstock.PharmStock.PharmacyMedication.PharmacyMedicationName</td>
                        <td width="20%">@pharmstock.QuantityRecived</td>
                       @*  <td width="20%">@pharmstock.PharmStock.</td>
                        <td width="20%">@pharmstock.PharmacyMedication.stocklevel </td> *@
                      @*   <td width="20%">@pharmstock.Date</td> *@
                        <td width="20%">@pharmstock.Status </td>

                        @* <td>
                <a asp-controller="Pharmacist" asp-action="UpdateStock" asp-route-ID="@pharmstock.PharmStockId" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>Update</a>

                <a asp-controller="Anaesthesiologist" asp-action="DeleteOrder" asp-route-ID="@pharmstock.PharmStockId" class="btn btn-danger">
                <i class="bi bi-trash3-fill"></i>Delete
                </a>

                </td> *@

                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Orders taken yet</p>
    }

</div>

