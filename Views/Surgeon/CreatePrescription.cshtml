@model WIRKDEVELOPER.Models.PrescriptionViewModel
@{
    ViewBag.Title = "Create Prescription";
}

<h2>Create Prescription</h2>

<form asp-controller="Surgeon" asp-action="CreatePrescription" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Patient and Gender Fields -->
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Name" for="Name">Patient Name</label>
                <input asp-for="Name" type="text" id="name" name="Name" class="form-control" value="@Model.Name" readonly />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for='surname' for="Surname">Patient Surname</label>
                <input asp-for='surname' type="text" id="surname" name="Surname" class="form-control" value="@Model.surname" readonly />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for='Gender' for="gender">Patient Gender</label>
                <input asp-for='Gender' type="text" id="gender" name="gender" class="form-control" value="@Model.Gender" readonly />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Email" for="EmailAddress">Email Address</label>
                <input asp-for="Email" type="email" id="EmailAddress" name="EmailAddress" class="form-control" value="@Model.Email" readonly />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" class="form-control" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Prescriber"></label>
                <input type="text" asp-for="Prescriber" class="form-control" required />
                <span asp-validation-for="Prescriber" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Urgent"></label>
                <input type="text" asp-for="Urgent" class="form-control" required />
                <span asp-validation-for="Urgent" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Status"></label>
                <input type="text" asp-for="Status" class="form-control" required />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
    </div>

    <h4>Medications</h4>
    <div id="medicationsContainer">
        @for (int i = 0; i < Model.Medications.Count; i++)
        {
            <div class="form-group medication-row" data-index="@i">
                <select asp-for="Medications[@i].PharmacyMedicationID" class="form-control">
                    <option value="">Select Medication</option>
                    @foreach (var medication in ViewBag.PharmacyMedications)
                    {
                        <option value="@medication.PharmacyMedicationID">@medication.PharmacyMedicationName</option>
                    }
                </select>
                <input asp-for="Medications[@i].Quantity" class="form-control" placeholder="Quantity" />
                <input asp-for="Medications[@i].Instructions" class="form-control" placeholder="Instructions" />
                <button type="button" class="btn btn-danger remove-medication">Remove</button>
            </div>
        }
    </div>

    <button type="button" class="btn btn-primary" id="addMedication">Add Medication</button>

    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            var index = @Model.Medications.Count;

            $('#addMedication').click(function () {
                var newRow = `<div class="form-group medication-row" data-index="${index}">
                                        <select name="Medications[${index}].PharmacyMedicationID" class="form-control">
                                            <option value="">Select Medication</option>
        @foreach (var medication in ViewBag.PharmacyMedications)
        {
                                                    <option value="@medication.PharmacyMedicationID">@medication.PharmacyMedicationName</option>
        }
                                        </select>
                                        <input name="Medications[${index}].Quantity" class="form-control" placeholder="Quantity" />
                                        <input name="Medications[${index}].Instructions" class="form-control" placeholder="Instructions" />
                                        <button type="button" class="btn btn-danger remove-medication">Remove</button>
                                     </div>`;

                $('#medicationsContainer').append(newRow);
                index++;
            });

            $(document).on('click', '.remove-medication', function () {
                $(this).closest('.medication-row').remove();
            });
        });
    </script>
}
