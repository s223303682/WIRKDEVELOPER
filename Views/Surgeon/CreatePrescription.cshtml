@model WIRKDEVELOPER.Models.Prescription
<dv>
    <h6>Add Prescription</h6>
</dv>
<hr/>
<form method="post" asp-action="CreateAppointment" class=" form-horizontal   bg-green-300  p-2 text-dark bg-opacity-20">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class=" form-group border-5 border-success">
        <label asp-for="PatientID"></label>
        <div col-sm-7>
            <input asp-for="PatientID" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="PatientID" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="Date"></label>
        <div col-sm-7>
            <input asp-for="Date" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="Date" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="QuantityAndInstractions"></label>
        <div col-sm-7>
            <input asp-for="QuantityAndInstractions" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="QuantityAndInstractions" class=" text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="Urgent"></label>
        <div col-sm>
            <select id="Dropdown" asp-for="Urgent" class=" form-control" id="validationName" required>
                <option value="select">select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>

            </select>
        </div>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="status"></label>
        <div col-sm-7>
            <input asp-for="status" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="status" class=" text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-8 offset-2 row">
            <div class=" col">
                <input type="submit" class="btn-primary btn-lg  " value="submit" />
            </div>
            <div class=" col-1">
                <a asp-action="PrescriptionList" class=" btn btn-primary btn-lg ">Prescriptions</a>
            </div>
        </div>
    </div>
</form>
