    <script>
        var medications = @Html.Raw(ViewBag.Medications);
        var patientAllergies = @Html.Raw(ViewBag.PatientAllergies);

        function checkForAllergies() {
            var selectedMedications = [];
            var matchingAllergies = [];

            // Gather selected medications
            $('select.medication-dropdown').each(function () {
                var selectedId = $(this).val();
                var medication = medications.find(m => m.PharmacyMedicationIngredientId == selectedId);
                if (medication) {
                    selectedMedications.push(medication);
                }
            });

            // Compare selected medications with patient allergies
            selectedMedications.forEach(function (med) {
                if (patientAllergies.includes(med.ActiveName)) {
                    matchingAllergies.push(med.ActiveName);
                }
            });

            // If any matches are found, show a pop-up alert
            if (matchingAllergies.length > 0) {
                var ignoreReason = prompt(`The following active ingredients match the patient's allergies: ${matchingAllergies.join(", ")}. Please provide a reason for ignoring these allergies if you wish to continue:`);

                if (!ignoreReason) {
                    return false; // Prevent form submission if no reason is given
                }

                // Store the ignore reason in a hidden input
                $('#IgnoreReason').val(ignoreReason);
            }

            return true; // Allow form submission
        }

        // Attach the allergy check to the form submit event
        $('form').on('submit', function (e) {
            if (!checkForAllergies()) {
                e.preventDefault(); // Prevent form submission if no reason for ignoring allergies is provided
            }
        });
        document.addEventListener('DOMContentLoaded', function () {
            // Parse the JSON data passed from the server
            const medications = JSON.parse('@Html.Raw(ViewBag.Medications)');
            const allergies = JSON.parse('@Html.Raw(ViewBag.PatientAllergies)'); // Assumed that you passed this via ViewBag

            function addMedicationField() {
                const medicationContainer = document.getElementById('medicationContainer');
                const index = medicationContainer.children.length;
                const medicationDiv = document.createElement('div');
                medicationDiv.classList.add('form-group');

                // Create medication options as a string
                const medicationOptions = medications.map(medication =>
                    `<option value="${medication.PharmacyMedicationID}">${medication.PharmacyMedicationName}</option>`
                ).join('');

                medicationDiv.innerHTML = `
                    <h4>Medication ${index + 1}</h4>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="Medications_${index}__PharmacyMedicationID">Medication</label>
                                <select name="Medications[${index}].PharmacyMedicationID" id="Medications_${index}__PharmacyMedicationID" class="form-control" required>
                                    <option value="" disabled>--select medication--</option>
                                    ${medicationOptions}
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="Medications_${index}__Quantity">Quantity</label>
                                <input type="number" name="Medications[${index}].Quantity" id="Medications_${index}__Quantity" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="Medications_${index}__Instructions">Instructions</label>
                                <input type="text" name="Medications[${index}].Instructions" id="Medications_${index}__Instructions" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                `;
                medicationContainer.appendChild(medicationDiv);
            }

            function checkAllergies() {
                const selectedMedications = document.querySelectorAll('[id^="Medications_"]');
                let allergyMatch = false;

                selectedMedications.forEach(medicationSelect => {
                    const medicationID = medicationSelect.value;
                    const selectedMedication = medications.find(m => m.PharmacyMedicationID == medicationID);
                    if (selectedMedication && allergies.includes(selectedMedication.ActiveID)) {
                        allergyMatch = true;
                    }
                });

                if (allergyMatch) {
                    if (!confirm("Warning: The selected medication contains active ingredients that match the patient's known allergies. Do you want to proceed?")) {
                        // Optional: force the user to provide a reason if they ignore the warning
                        const reason = prompt("Please provide a reason for ignoring this warning:");
                        if (reason) {
                            // Store the reason
                            document.getElementById("ignoreReason").value = reason;
                        } else {
                            alert("You must provide a reason to proceed.");
                            return false;
                        }
                    }
                }
                return true; // Continue with form submission
            }

            // Attach event listener to the button
            document.getElementById('addMedicationButton').addEventListener('click', addMedicationField);
        });
    </script>

