@model WIRKDEVELOPER.Models.PrescriptionViewModel

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<h2>Create Prescription</h2>

<form asp-action="CreatePrescription" method="post">
    <div class="card">
      <div class="card-header bg-primary">
          Patient Details
      </div>
      <div class="card-body">
          <div class="row">
              <div class="col">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
              </div>
              <div class="col">

                    <div class="form-group">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control" readonly />
                    </div>
              </div>
              <div class="col">
                    <div class="form-group">
                        <label asp-for="IDNumber"></label>
                        <input asp-for="IDNumber" class="form-control" readonly />
                    </div>
              </div>
              <div class="col">
                    <div class="form-group">
                        <label asp-for="IDNumber"></label>
                        <input asp-for="IDNumber" class="form-control" readonly />
                    </div>
              </div>
               <div class="col">
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <input asp-for="Gender" class="form-control" readonly />
                    </div>
              </div>
                <div class="col">

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                </div>
              
          </div>
      </div>
    </div>
    <div class="card">
        <div class="card-header bg-primary">
            PrescriptionDetails
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">

                    <div class="form-group">
                        <label asp-for="Date"></label>
                        <input type="date" asp-for="Date" class="form-control" required />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">

                    <div class="form-group">
                        <label asp-for="Prescriber"></label>
                        <input type="text" asp-for="Prescriber" class="form-control" required />
                        <span asp-validation-for="Prescriber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group border-1">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control" required>
                            <option value="" disabled selected>--select status</option>
                            <option value="Pending">Pending</option>
                            <option value="Pending">Received</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group border-1">
                        <label asp-for="Urgent"></label>
                        <select asp-for="Urgent" class="form-control" required>
                            <option value="" disabled selected>--select status</option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                        <span asp-validation-for="Urgent" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header bg-primary">
            Medication Details
        </div>
        <div class="card-body">
            <div id="medicationContainer">
                @for (int i = 0; i < Model.Medications.Count; i++)
                {
                    <div class="medication-item">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Medications[@i].PharmacyMedicationName"></label>
                                    <select asp-for="Medications[@i].PharmacyMedicationName" class="form-control" required>
                                        <!-- Populate this dropdown with your medications -->
                                        @foreach (var medication in ViewBag.Medications as List<SelectListItem>)
                                        {
                                            <option value="@medication.Text">@medication.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Medications[@i].Quantity"></label>
                                    <input asp-for="Medications[@i].Quantity" class="form-control" type="number" min="1" required />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Medications[@i].Instructions"></label>
                                    <input asp-for="Medications[@i].Instructions" class="form-control" required />
                                </div>
                            </div>
                        </div>
                       
                      
                       
                        <button type="button" class="btn btn-danger remove-medication">Remove</button>
                    </div>
                }
            </div>
        </div>
    </div>
 
  
 
   
  
    <button type="button" id="addMedication" class="btn btn-primary">Add Medication</button>

    <div id="alertContainer" class="alert alert-warning" style="display: @(Model.HasAlerts ? "block" : "none")">
        <strong>Alert!</strong> Please review the alert details below:
        <textarea id="ignoreReason" name="IgnoreReason" rows="4" placeholder="Enter reason to ignore alert..." class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Submit Prescription</button>
    <a asp-controller="PatientHistory" asp-action="Index" asp-route-name="@Model.Name" asp-route-surname="@Model.Surname" asp-route-idNumber="@Model.IDNumber" class="btn btn-info">View Patient History</a>


    <br >
    <br >
    <br >
</form>

@section Scripts {
    <script>
        document.getElementById('addMedication').addEventListener('click', function () {
            const medicationContainer = document.getElementById('medicationContainer');
            const index = medicationContainer.children.length; // Get the current number of medication items

            const medicationItem = `
                        <div class="medication-item">
                        <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="Medications_${index}__PharmacyMedicationName">Medication Name</label>
                                <select name="Medications[${index}].PharmacyMedicationName" class="form-control" required>
        @foreach (var medication in ViewBag.Medications as List<SelectListItem>)
        {
                                            <option value="@medication.Text">@medication.Text</option>
        }
                                </select>
                            </div>
                            </div>
                            <div class="col">
                            <div class="form-group">
                                <label for="Medications_${index}__Quantity">Quantity</label>
                                <input name="Medications[${index}].Quantity" class="form-control" type="number" min="1" required />
                            </div>
                            </div>
                            <div class="col">
                            <div class="form-group">
                                <label for="Medications_${index}__Instructions">Instructions</label>
                                <input name="Medications[${index}].Instructions" class="form-control" required />
                            </div>
                            </div>
                            <button type="button" class="btn btn-danger remove-medication">Remove</button>
                        </div>
                        </div>
                        
                    `;
            medicationContainer.insertAdjacentHTML('beforeend', medicationItem);
        });

        // Remove medication item
        document.getElementById('medicationContainer').addEventListener('click', function (e) {
            if (e.target.classList.contains('remove-medication')) {
                e.target.closest('.medication-item').remove();
            }
        });
    </script>
}
