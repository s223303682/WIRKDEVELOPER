@model WIRKDEVELOPER.Models.Prescription



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Create Prescription</title>
    <script>
        function addMedicationField() {
            const medicationContainer = document.getElementById('medicationContainer');
            const index = medicationContainer.children.length;
            const medicationDiv = document.createElement('div');
            medicationDiv.classList.add('form-group');
            medicationDiv.innerHTML = `
                        <h4>Medication ${index + 1}</h4>
                        <div class="form-group">
                            <label for="medication_${index}_PharmacyMedicationID">Medication</label>
                            <select name="Medications[${index}].PharmacyMedicationID" id="medication_${index}_PharmacyMedicationID" class="form-control" required>
                                <option value="" disabled>--select medication--</option>
        @foreach (var medication in ViewBag.getPharmacyMedication)
        {
                                        <option value="@medication.Value">@medication.Text</option>
        }
                            </select>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="medication_${index}_Quantity">Quantity</label>
                            <input type="number" name="Medications[${index}].Quantity" id="medication_${index}_Quantity" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="medication_${index}_Instructions">Instructions</label>
                            <input type="text" name="Medications[${index}].Instructions" id="medication_${index}_Instructions" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <hr />
                    `;
            medicationContainer.appendChild(medicationDiv);
        }
    </script>
</head>
<body>
    <div class="row">
        <div class=" col-1">
            <a asp-action="PrescriptionList" class=" btn btn-primary  ">List</a>
        </div>
    </div>
    <h1>Create Prescription</h1>
    <form asp-action="CreatePrescription" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Include other fields as needed -->
        <div id="medicationContainer">
            <!-- Dynamic Medication Fields Will Be Added Here -->
        </div>
        <button type="button" onclick="addMedicationField()" class="btn btn-primary">Add Medication</button>

        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Prescriber"></label>
            <input asp-for="Prescriber" class="form-control" />
            <span asp-validation-for="Prescriber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Urgent"></label>
            <select asp-for="Urgent">
                <option value="yes">yes</option>
                <option value="mo">no</option>
            </select>
            <span asp-validation-for="Urgent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status"></label>
            <select asp-for="Status">
                <option value="pending">pending\</option>
               
            </select>
            <span asp-validation-for="Urgent" class="text-danger"></span>
        </div>


        <input type="submit" value="Create" class="btn btn-primary" />
    </form>
   
    
</body>
</html>
