            <div class="col border-2">
                <div class="form-group border-2">
                    <label asp-for="PatientID"></label>
                    <div>
                        <input asp-for="PatientID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="PatientID" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Date"></label>
                    <div>
                        <input type="date" asp-for="Date" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Date" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="prescriber"></label>
                    <div>
                        <input asp-for="prescriber" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="prescriber" class=" text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row" id="users">
            <div class="user">
                <div class="col">
                    <input asp-for="Medication"  type="text" placeholder="Medication" required><br>
                </div>
                <div class="col">
                    <input asp-for="Quantity"  type="number" placeholder="Quantity" required><br>
                </div>
               <div class="col">
                    <input asp-for='Instructions'  type="text" placeholder="Instructions" required><br><br>
               </div>
                
            </div>
            <button id='add-user'>Add more medication</button><br><br>
   </div>
        <div class=" row">
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="status"></label>
                    <div>
                        <select id="NurseDropdown" asp-for="status" class=" form-control" id="validationName" required>
                            <option value="Pending">Pending</option>
                        </select>
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="status" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Urgent"></label>
                    <select id="NurseDropdown" asp-for="Urgent" class=" form-control" id="validationName" required>
