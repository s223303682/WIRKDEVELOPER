@model IEnumerable<WIRKDEVELOPER.Models.Prescription>

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <table id="dataTable" class="table table-bordered table-striped table-white">
            <thead class="thead-dark">
                <tr>
                    <th>ID Number</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Date</th>
                    <th>Prescriber</th>
                    <th>Urgent</th>
                    <th>Status</th>
                    <th>Ignore Reason</th>
                    <th>Medications</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prescription in Model)
                {
                    <tr>
                        <td>@prescription.IDNumber</td>
                        <td>@prescription.Name</td>
                        <td>@prescription.Surname</td>
                        <td>@prescription.Gender</td>
                        <td>@prescription.Email</td>
                        <td>@prescription.Date.ToShortDateString()</td>
                        <td>@prescription.Prescriber</td>
                        <td>@prescription.Urgent</td>
                        <td>@prescription.Status</td>
                        <td>@prescription.IgnoreReason</td>
                        <td>
                            <ul>
                                @if (prescription.PrescriptionMedications != null && prescription.PrescriptionMedications.Any())
                                {
                                    foreach (var medication in prescription.PrescriptionMedications)
                                    {
                                        <li>
                                            Medication ID: @medication.PharmacyMedicationID -
                                            Name: @medication.PrescriptionMedicationID -
                                            Quantity: @medication.Quantity -
                                            Instructions: @medication.Instructions
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li>No medications prescribed.</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <a href="@Url.Action("UpdatePrescription", "Prescription", new { id = prescription.PrescriptionID })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeletePrescription", "Prescription", new { id = prescription.PrescriptionID })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("CreatePrescription", "Prescription")" class="btn btn-primary">Create New Prescription</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>




