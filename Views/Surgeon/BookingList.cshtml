@model IEnumerable<WIRKDEVELOPER.Models.BookingViewModel>
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row mb-3">
            <div class="col-12 text-right">
                <h1>
                    <a asp-controller="Surgeon" asp-action="CreateBooking" class="btn btn-primary" style="width:100%">Creating Booking</a>
                </h1>
            </div>
        </div>
        <h1>
            <div class="bg-info bg-opacity-50 text-center text-white rounded-1">BOOKINGS</div>
        </h1>
        <form action="CreateBooking" method="GET" id="dataForm">
            @if (Model != null && Model.Any())
            {
                <table id="dataTable" class="table table-bordered table-striped table-white">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Patient Name</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Theatre</th>
                            <th>Treatment Codes</th>
                            <th>Anesthesiologist</th>
                            <th>Update</th>
                            <th>Delete</th>
                            <th>Prescribe</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.BookingID</td>
                                <td>@booking.PatientName</td>
                                <td>@booking.Gender</td>
                                <td>@booking.EmailAddress</td>
                                <td>@booking.Date?.ToShortDateString()</td>
                                <td>@booking.Time?.ToShortTimeString()</td>
                                <td>@booking.OperationTheatreName</td>
                                <td>
                                    @if (booking.TreatmentCodes.Any())
                                    {
                                        @string.Join(", ", booking.TreatmentCodes)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No codes</span>
                                    }
                                </td>
                                <td>@booking.Anaestesiologist</td>
                                <td>
                                    <a asp-controller="Surgeon" asp-action="UpdateBooking" asp-route-ID="@booking.BookingID" class="btn btn-warning">Update</a>
                                </td>
                                <td>
                                    <a asp-controller="Surgeon" asp-action="DeleteBooking" asp-route-ID="@booking.BookingID" class="btn btn-danger">Delete</a>
                                </td>
                                <td>
                                    <form asp-controller="Surgeon" asp-action="CreatePrescription" method="get" class="d-inline">
                                        <input type="hidden" name="bookingID" value="@booking.BookingID" />
                                        <input type="hidden" name="name" value="@booking.PatientName" />
                                        <input type="hidden" name="gender" value="@booking.Gender" />
                                        <input type="hidden" name="email" value="@booking.EmailAddress" />
                                        <button type="submit" class="btn btn-success">Add</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No bookings have been made.</p>
            }
        </form>
    </div>
  @*   <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> *@
</body>
</html>
