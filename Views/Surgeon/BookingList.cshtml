@model IEnumerable<WIRKDEVELOPER.Models.BookingViewModel>
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<h2>Booking List</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Patient Name</th>
            <th>Patient Surname</th>
            <th>Gender</th>
            <th>Email Address</th>
            <th>Date</th>
            <th>Time</th>
            <th>Operation Theatre</th>
            <th>Anaesthesiologist</th>
            <th>Treatment Codes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.PatientName</td>
                <td>@booking.PatientSurname</td>
                <td>@booking.Gender</td>
                <td>@booking.EmailAddress</td>
                <td>@booking.Date?.ToString("yyyy-MM-dd")</td>
                <td>@booking.Time?.ToString("HH:mm")</td>
                <td>@booking.OperationTheatreName</td>
                <td>@booking.AnaName</td>
                <td>
                    @if (booking.TreatmentCodes != null && booking.TreatmentCodes.Any())
                    {
                        @string.Join(", ", booking.TreatmentCodes)
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
