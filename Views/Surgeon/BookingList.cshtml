@model IEnumerable<WIRKDEVELOPER.Models.Booking>

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Bookings</title>
    <link rel="stylesheet" href="~/css/StyleSurgeon3.css"> <!-- Optional -->
    <!-- Include Bootstrap CSS for better styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-4">
        <h1 class="mb-4">
            <div class="bg-info bg-opacity-50 text-center text-white rounded-1 p-3">BOOKINGS</div>
        </h1>

        @if (Model.Any())
        {
            <table id="dataTable" class="table table-bordered table-striped table-white">
                <thead class="thead-primary">
                    <tr>
                        <th>ID Number</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Theatre</th>
                        <th>Treatment Codes</th>
                        <th>Anesthesiologist</th>
                        <th>Actions</th>
                        <th>Add Prescription</th> <!-- Added to match the extra <td> -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.IDNumber</td>
                            <td>@booking.Name</td>
                            <td>@booking.Surname</td>
                            <td>@booking.Gender</td>
                            <td>@booking.Email</td>
                            <td>@booking.Date.ToShortDateString()</td>
                            <td>@booking.Time.ToString(@"hh\:mm")</td>
                            <td>@booking.OperationTheatre?.OperationTheatreName ?? "</td>
                            <td>
                                @if (booking.BookingTreatmentCodes != null && booking.BookingTreatmentCodes.Any())
                                {
                                    @string.Join(", ", booking.BookingTreatmentCodes.Select(tc => tc.TreatmentCode?.ICDCODE ?? "N/A"))
                                }
                                else
                                {
                                    <span>No Treatment Codes</span>
                                }
                            </td>
                            <td>
                                @if (booking.Anaesthesiologist != null)
                                {
                                    @booking.Anaesthesiologist.ApplicationUser?.FirstName @booking.Anaesthesiologist.ApplicationUser?.LastName
                                }
                                else
                                {
                                    <span class="text-muted">No Anesthesiologist Assigned</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Surgeon" asp-action="UpdateBooking" asp-route-ID="@booking.BookingID" class="btn btn-primary btn-sm mx-1">Update</a>
                                <a asp-controller="Surgeon" asp-action="DeleteBooking" asp-route-ID="@booking.BookingID" class="btn btn-danger btn-sm mx-1">Delete</a>
                            </td>
                            <td>
                                <form asp-controller="Surgeon" asp-action="CreatePrescription" method="get" class="d-inline">
                                    <input type="hidden" name="BookingID" value="@booking.BookingID" />
                                    <input type="hidden" name="IDNumber" value="@booking.IDNumber" />
                                    <input type="hidden" name="name" value="@booking.Name" />
                                    <input type="hidden" name="surname" value="@booking.Surname" />
                                    <input type="hidden" name="gender" value="@booking.Gender" />
                                    <input type="hidden" name="email" value="@booking.Email" />
                                    <button type="submit" class="btn btn-secondary btn-sm">Add Prescription</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No bookings have been made.
            </div>
        }
    </div>

    <!-- Include Bootstrap JS and dependencies for better functionality -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>



