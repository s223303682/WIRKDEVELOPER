@model AlertViewModel // Use the new AlertViewModel

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<h2>Medication Alerts</h2>

@if (Model.HasAlerts)
{
    <div class="alert alert-danger">
        <h4>Alert!</h4>
        <p>There are potential issues with the medications you have selected:</p>
        <ul>
            <li>Some medications may interact with your current medications.</li>
            <li>You may be allergic to some active ingredients.</li>
        </ul>
        <p>Please consult with your healthcare provider before proceeding.</p>
    </div>

    <form asp-action="CreatePrescription"  method="post">
        <input type="hidden" name="IgnoreReason" value="@Model.IgnoreReason" />

        <div class="form-group">
            <label for="IgnoreReason">Reason for ignoring the alert (optional):</label>
            <input type="text" class="form-control" name="IgnoreReason" value="@Model.IgnoreReason" />
        </div>
        <div class="card">
            <div class="card-header">
                <h5>Patient Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="Name">Name:</label>
                            <input type="text" class="form-control" name="Name" value="@Model.Name" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Surname">Surname:</label>
                            <input type="text" class="form-control" name="Surname" value="@Model.Surname" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Gender">Gender:</label>
                            <input type="text" class="form-control" name="Gender" value="@Model.Gender" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="IDNumber">IDNumber:</label>
                            <input type="text" class="form-control" name="IDNumber" value="@Model.IDNumber" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input type="text" class="form-control" name="Email" value="@Model.Email" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Prescription Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="Prescriber">Prescriber:</label>
                            <input type="text" class="form-control" name="Prescriber" value="@Model.Prescriber" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Status">Status:</label>
                            <input type="text" class="form-control" name="Status" value="@Model.Status" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Urgent">Urgent:</label>
                            <input type="text" class="form-control" name="Urgent" value="@Model.Urgent" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Date">Date:</label>
                            <input type="date" class="form-control" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Medication Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Medication Name</th>
                            <th>Quantity</th>
                           
                            <th>Instructions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var medication in Model.Medications)
                        {
                            <tr>
                                <td>@medication.PharmacyMedicationName</td>
                                <td>@medication.Quantity</td>
                               
                                <td>@medication.Instructions</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <button type="submit" class="btn btn-warning">Proceed Anyway</button>
        <a asp-action="CreatePrescription" class="btn btn-secondary">Go Back</a>
        <br />
        <br />
        <br />
    </form>
}
else
{
    <div class="alert alert-success">
        <h4>No Alerts</h4>
        <p>You can proceed with creating the prescription.</p>
        <a asp-action="CreatePrescription" class="btn btn-primary">Create Prescription</a>
    </div>
}

