@model WIRKDEVELOPER.Models.PrescriptionViewModel

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Update Prescription</title>
</head>
<body>
    <div class="row">
        <div class="col-1">
            <a asp-action="PrescriptionList" class="btn btn-primary">Back to List</a>
        </div>
    </div>

    <h1>Update Prescription</h1>

    <form asp-action="UpdatePrescription" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Display Patient Information (Read-only) -->
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name">Patient Name</label>
                    <input asp-for="Name" type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for='surname'>Patient Surname</label>
                    <input asp-for='surname' type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for='Gender'>Patient Gender</label>
                    <input asp-for='Gender' type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" readonly />
                </div>
            </div>
        </div>

        <!-- Editable Fields for Prescription Details -->
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Prescriber">Prescriber</label>
                    <input asp-for="Prescriber" class="form-control" />
                    <span asp-validation-for="Prescriber" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Urgent">Urgent</label>
                    <select asp-for="Urgent" class="form-control">
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
                    <span asp-validation-for="Urgent" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Status">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="pending">Pending</option>
                        <option value="completed">Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Display Medications (Read-only) -->
        <h4>Medications</h4>
        <div id="medicationContainer">
            @for (int i = 0; i < Model.Medications.Count; i++)
            {
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Medication</label>
                            <input type="text" class="form-control" value="@Model.Medications[i].PharmacyMedicationID" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number" class="form-control" value="@Model.Medications[i].Quantity" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Instructions</label>
                            <input type="text" class="form-control" value="@Model.Medications[i].Instructions" readonly />
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Submit Button -->
        <input type="submit" value="Update Prescription" class="btn btn-primary" />
    </form>
</body>
</html>
