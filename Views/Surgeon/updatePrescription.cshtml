@model WIRKDEVELOPER.Models.PrescriptionViewModel
@using System.Text.Json
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Edit Prescription</title>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Serialize the medications list to JSON
            const medications = @Html.Raw(JsonSerializer.Serialize(Model.Medications));

            function addMedicationField(index, medication = {}) {
                const medicationContainer = document.getElementById('medicationContainer');
                const medicationDiv = document.createElement('div');
                medicationDiv.classList.add('form-group');

                // Create medication options as a string
                const medicationOptions = medications.map(med =>
                    `<option value="${med.PharmacyMedicationID}" ${medication.PharmacyMedicationID === med.PharmacyMedicationID ? 'selected' : ''}>${med.PharmacyMedicationName}</option>`
                ).join('');

                medicationDiv.innerHTML = `
                            <h4>Medication ${index + 1}</h4>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="Medications_${index}__PharmacyMedicationID">Medication</label>
                                        <select name="Medications[${index}].PharmacyMedicationID" id="Medications_${index}__PharmacyMedicationID" class="form-control" required>
                                            <option value="" disabled>--select medication--</option>
                                            ${medicationOptions}
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="Medications_${index}__Quantity">Quantity</label>
                                        <input type="number" name="Medications[${index}].Quantity" id="Medications_${index}__Quantity" class="form-control" value="${medication.Quantity || ''}" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="Medications_${index}__Instructions">Instructions</label>
                                        <input type="text" name="Medications[${index}].Instructions" id="Medications_${index}__Instructions" class="form-control" value="${medication.Instructions || ''}" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                            </div>
                        `;
                medicationContainer.appendChild(medicationDiv);
            }

            // Populate existing medications
            Model.Medications.forEach((medication, index) => {
                addMedicationField(index, medication);
            });

            // Attach event listener to the button
            document.getElementById('addMedicationButton').addEventListener('click', function () {
                addMedicationField(document.getElementById('medicationContainer').children.length);
            });
        });
    </script>
</head>
<body>
    <div class="row">
        <div class="col-1">
            <a asp-action="PrescriptionList" class="btn btn-primary">List</a>
        </div>
    </div>
    <h1>Edit Prescription</h1>
    <form asp-action="updatePrescription" method="post">
        <input type="hidden" asp-for="PrescriptionViewModelID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="surname"></label>
                    <input asp-for="surname" class="form-control" />
                    <span asp-validation-for="surname" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Dynamic Medication Fields -->
        <div id="medicationContainer">
            <!-- Existing medication fields will be added here by JavaScript -->
        </div>
        <button type="button" id="addMedicationButton" class="btn btn-primary">Add Medication</button>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Prescriber"></label>
                    <input asp-for="Prescriber" class="form-control" />
                    <span asp-validation-for="Prescriber" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Urgent"></label>
                    <select asp-for="Urgent" class="form-control">
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
                    <span asp-validation-for="Urgent" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="pending">Pending</option>
                        <option value="completed">Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>

        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </form>
</body>
</html>

