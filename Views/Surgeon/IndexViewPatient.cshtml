@model IEnumerable<WIRKDEVELOPER.Models.Addm>

@{

    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

@if (User.IsInRole("Surgeon"))
{
    <form method="post" asp-action="IndexViewPatient">
        <div class="border p-3 #FBD603">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*validation*@

            <div class="row">

                <div class="form-group">


                    <div class="col-12">
                        <div class="row">

                            <div class="col-12">
                                <div class="row">

                                    <div class="col-4">
                                        @* <label asp-for="Date"></label> *@
                                        <label for="searchDate"><h1>>SEARCH BY ID NUMBER</h1></label>
                                        <input type="text" class="form-control" id="searchpatient" name="searchpatient" required />

                                        @* <input asp-for="Date" class="form-control" /> *@
                                        @*    <span asp-validation-for="Date" class="text-danger"></span> *@
                                    </div>
                                    @* <button type="submit" class="btn btn-primary">View</button> *@

                                </div>

                            </div>

                            <div class="form-group row">
                                <div class="col-8 offset-2 row">
                                    <div class="col">
                                        <input type="submit" class="btn btn-primary w-75 bi bi-arrow-left-circle" value="VIEW" />
                                    </div>
                                    @*  <div class="col">
                                <a asp-action="IndexScree" class="btn btn-danger w-75"><i class="bi bi-arrow-left-circle"></i>BACK</a>
                                </div> *@
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </form>

    <br />

    <head>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap4.min.css" />
    </head>

    <div id="Header" class="bg-info container">
        <h2 class="m-1 pt-5 text-center text-white">View Patients</h2>
    </div>
    <div class="container p-3">
        <div class="row pt-4">
            @* <div class="col-6">
        <h2 class="text-primary">View Patients</h2>
        </div> *@
        </div>
        <br />
        @if (Model.Count() > 0)
        {

            <table class="table table-sm table-hover">

                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Patient
                        </th>
                        <th>
                            PatientIDNO
                        </th>
                        <th>
                            Ward
                        </th>
                        <th>
                            Bed
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            View deails
                        </th>
                        <th>
                            add booking
                        </th>


                    </tr>
                </thead>

                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td width="20%">@patient.Date</td>
                            <td width="20%">@patient.Patient.PatientName</td>
                            <td width="20%">@patient.Patient.PatientIDNO</td>
                            <td width="20%">@patient.Ward.WardName</td>
                            <td width="20%">@patient.Bed.BedNumber</td>
                            <td width="20%">@patient.Status</td>


                            <td>
                                <a asp-controller="Surgeon" asp-action="ViewPatientRec" asp-route-ID="@patient.AddmID" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>View Records</a>

                              

                            </td>
                            <td>
                                <form asp-controller="Surgeon" asp-action="CreateBooking" method="get">
                                    <input type="hidden" name="bookingID" value="@booking.BookingID" />
                                    <input type="hidden" name="name" value="@booking.BookingNewPatientName" />
                                    <input type="hidden" name="gender" value="@booking.Gender" />
                                    <input type="hidden" name="email" value="@booking.Email" />
                                    <button type="submit" class="btn btn-blue-300 mx-1">Add</button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Appointments created yet</p>
        }

    </div>

}
