@model WIRKDEVELOPER.Models.BookingNewPatient
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    @* <link rel="stylesheet" href="~/css/StyleSurgeon3.css"> *@


</head>
<body>
     <div class="row">
        <div class=" col-1">
            <a asp-action="BookingPatientList" class=" btn btn-primary  ">List</a>
        </div>
    </div>
    <div class="row">
        <div class=col>
         <div class=" mt-2 bg-info bg-opacity-50 text-center text-white rounded-1">   <h1> BOOKING FOR A PATIENT</h1></div>
        </div>
    </div>
    <form method="post" asp-action="CreateBookingPatient" class="bg-white bg-opacity-60 border border-3 border-dark">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col border-2">
                <div class="form-group border-2">
                    <label asp-for="BookingNewPatientName"></label>
                    <input type="text" asp-for="BookingNewPatientName" class="form-control" required />
                    <span asp-validation-for="BookingNewPatientName" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="BookingNewPatientSurname"></label>
                    <input type="text" asp-for="BookingNewPatientSurname" class="form-control" required />
                    <span asp-validation-for="BookingNewPatientSurname" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="BookingNewPatientIDNUmber"></label>
                    <input type="text" asp-for="BookingNewPatientIDNUmber" class="form-control" required />
                    <span asp-validation-for="BookingNewPatientIDNUmber" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control" required>
                        <option value="" disabled selected>--select gender</option>
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input type="date" asp-for="Date" class="form-control" required />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Time"></label>
                    <input type="time" asp-for="Time" class="form-control" required />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Province"></label>
                    <select asp-for="Province" id="province" name="Province" class="form-control" required>
                        <option value="">Select Province</option>
                        <!-- Options will be populated by JavaScript -->
                    </select>
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="City"></label>
                    <select asp-for="City" id="city" name="City" class="form-control" required>
                        <option value="">Select City</option>
                        <!-- Options will be populated by JavaScript -->
                    </select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Suburb"></label>
                    <select asp-for="Suburb" id="suburb" name="Suburb" class="form-control" required>
                        <option value="">Select Suburb</option>
                        <!-- Options will be populated by JavaScript -->
                    </select>
                    <span asp-validation-for="Suburb" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Zip"></label>
                    <input asp-for="Zip" type="text" class="form-control" required />
                    <span asp-validation-for="Zip" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
             <div class="col">
                <div class="form-group border-1">
                    <label asp-for="UserId"></label>
                    <select asp-for="UserId" class="form-control" asp-items="@ViewBag.getAnaesthesiologist" required>
                        <option value="" disabled selected>--Select Anaestiologist</option>
                    </select>
                    <span asp-validation-for="TreatmentCodeID" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="ContactNumber"></label>
                    <input asp-for="ContactNumber" type="text" class="form-control" required />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="OperationTheatreID"></label>
                    <select asp-for="OperationTheatreID" class="form-control" asp-items="@ViewBag.getOperationTheatre" required>
                        <option value="" disabled selected>--select Theatre</option>
                    </select>
                    <span asp-validation-for="OperationTheatreID" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="TreatmentCodeID"></label>
                    <select asp-for="TreatmentCodeID" class="form-control" asp-items="@ViewBag.getTreatmentCode" required>
                        <option value="" disabled selected>--Select Treatment Code</option>
                    </select>
                    <span asp-validation-for="TreatmentCodeID" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <a asp-controller="Surgeon" asp-action="Dashboard" class="btn btn-secondary">Back</a>
            </div>
            <div class="col">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </form>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
            const provinces = ['Eastern Cape', 'Western Cape', 'North West','Gauteng','Free State','Limpopo','Northen Cape','Kwazulu-Natal'];
        const cities = {
            'Eastern Cape': ['Gqeberha', 'Bisho'],
            'Western Cape': ['Cape Town'],
            'Northen Cape': ['Kimberly']
            'North West': ['Mahikeng','Stella']
            'Gauteng': ['Johannesburg', 'Pretoria'],
            'Free State': ['Bloemfontein'],
            'Limpopo': ['Polokwana'],
            'Mpumalanga': ['Mbombela'],
            'Kwazulu-Natal': ['Durban', 'Richards Bay', 'Port Shepstone', 'Newcastle', 'Estcourt','Ladysmith and Richmond.']
        };
        const suburbs = {
            'Gqeberha': ['Bridgemead', 'Homewood', 'Algoa park', 'cotswold', 'Lorraine', 'Struandale', 'Malabar', 'Summerstrand'],
            'Johannesburg': ['Houston', 'Dallas', 'Austin'],
            'Mbombela': ["Kamagugu", 'Barberton', 'San Diego', 'Riverside', 'valencia park'],
            'Durban': ['Essenwood', 'kenville', 'Cato manor', 'Masgrave', 'Bluff', 'Glenmore', 'kwamashu', 'inanda', 'Tongaat', 'Greyville']
        };

        const provinceSelect = document.getElementById('province');
        const citySelect = document.getElementById('city');
        const suburbSelect = document.getElementById('suburb');

        // Populate provinces
        provinces.forEach(province => {
            const option = document.createElement('option');
            option.value = province;
            option.textContent = province;
            provinceSelect.appendChild(option);
        });

        // Update cities based on selected province
        provinceSelect.addEventListener('change', function () {
            const selectedProvince = this.value;
            citySelect.innerHTML = '<option value="">Select City</option>'; // Reset cities
            suburbSelect.innerHTML = '<option value="">Select Suburb</option>'; // Reset suburbs

            if (selectedProvince) {
                cities[selectedProvince].forEach(city => {
                    const option = document.createElement('option');
                    option.value = city;
                    option.textContent = city;
                    citySelect.appendChild(option);
                });
            }
        });

        // Update suburbs based on selected city
        citySelect.addEventListener('change', function () {
            const selectedCity = this.value;
            suburbSelect.innerHTML = '<option value="">Select Suburb</option>'; // Reset suburbs

            if (selectedCity) {
                suburbs[selectedCity].forEach(suburb => {
                    const option = document.createElement('option');
                    option.value = suburb;
                    option.textContent = suburb;
                    suburbSelect.appendChild(option);
                });
            }
        });
    });
</script>

  
</body>
</html>



            
