@model WIRKDEVELOPER.Models.BookingPatient;
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        @* <link rel="stylesheet" href="~/css/StyleSurgeon3.css"> *@
   

    </head>
    <body>
    <div class="row">
        <div class=" col-1">
            <a asp-action="BookingPatientList" class=" btn btn-primary  ">List</a>
        </div>
    </div>
    <div class="row" >
        <div class=col>
            <div class=" mt-2 bg-info bg-opacity-50 text-center text-white rounded-1"> ADD NEW Patient</div>
        </div>
    </div>
    <form method="post" asp-action="CreateBookingPatient" class="bg-white bg-opacity-60 border border-3 border-dark">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col border-2">
                <div class="form-group border-2">
                    <label asp-for="BookingPatientName"></label>
                    <div>
                        <input asp-for="BookingPatientName" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="BookingPatientName" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="BookingPatientSurname"></label>
                    <div>
                        <input type="date" asp-for="BookingPatientSurname" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="BookingPatientSurname" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Gender"></label>
                    <div>
                        <input asp-for="Gender" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Gender" class=" text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div id="option">
                    <div class="form-group border-1">
                        <label asp-for="email"></label>
                        <input asp-for="email" type="email" class="form-control" id="Invalid" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="email" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <div>
                        <input type="date" asp-for="Date" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Date" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Time"></label>
                    <div>
                        <input type="time" asp-for="Time" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Time" class=" text-danger"></span>
                </div>
            </div>
        </div>
     
        <div class="row">
            <div class="col">
                <label asp-for="province" for="country">Country:</label>
                <select asp-for="province" id="country" name="country" onchange="populateStates()" class="form-control">
                    <option value="">Select Country</option>
                    <option value="Eastern Cape">Eastern Cape</option>
                    <option value="Western Cape">Western Cape</option>
                    <option value="Gauteng">Gauteng</option>
                    <option value="North West">North West</option>
                    <option value="Kwazulu-Natal">Kwazulu-Natal</option>
                    <option value="Limpopo">Limpopo</option>
                    <option value="Mpumalanga">Mpumalanga</option>
                    <option value="Free State">Free State</option>
                    <option value="Northen Cape">Northen Cape</option>
                    
                </select>
            </div>
           <div class="col">
                <label asp-for="City" for="state">State:</label>
                <select asp-for="City" id="state" name="state" onchange="populateCities()" class="form-control">
                    <option value="">Select State</option>
                </select>
           </div>
           <div class="col">
                <label asp-for="Surbub" for="city">City:</label>
                <select asp-for="Surbub" id="city" name="city" class="form-control">
                    <option value="">Select City</option>
                </select>
           </div>
           <div class="col">
                <label asp-for="Zip" for="zip">Zip:</label>
                <select asp-for="Zip" id="zip" name="zip" class="form-control">
                    <option value="">Select zip</option>
                </select>
           </div>

            
        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="ContactNumber"></label>
                <div>
                    <input asp-for="ContactNumber" class="form-control" id="InvalidName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="ContactNumber" class=" text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="OperationTheatreID"></label>
                    <div>
                        <input asp-for="OperationTheatreID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="OperationTheatreID" class=" text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="TreatmentID"></label>
                    <div>
                        <input asp-for="TreatmentID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="TreatmentID" class=" text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="MedicalProfessionalID"></label>
                    <div>
                        <input asp-for="MedicalProfessionalID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="MedicalProfessionalID" class=" text-danger"></span>
                </div>
            </div>

       
        </div>
        <br>
        <div class="row">
            <div class="col">
                <div class=" bg-white bg-opacity-25">
                    <a asp-controller="Surgeon" asp-action="Dashboard">Back</a>

                </div>
            </div>
            <div class="col">
                <div class=" bg-white bg-opacity-25">
                    <input type="submit" class="btn-outline-primary" value="submit" />

                </div>
            </div>

        </div>

    </form>
   <script>
        const countryStateInfo = {
            "North West": ["Mahikeng", "Stella"],
            "Gauteng": ["Johannesburg", "Pretoria"],
            "Free State": ["Bloemfontein"],
            "Limpopo": ["Polokwana"],
            "Mpumalanga": ["Mbombela"],
            "Northen Cape": ["Kimberly"],
            "Kwazulu-Natal": ["Durban"," Richards Bay", "Port Shepstone", "Newcastle", "Estcourt", "Ladysmith and Richmond." ],
    "Eastern Cape": ["Gqeberha", "Bisho", "Florida"],
    "Western Cape": ["Cape Town"]
};

const stateCityInfo = {
    "Gqeberha": ["Bridgemead", "Homewood", "Algoa park", "cotswold", "Lorraine", "Struandale", "Malabar", "Summerstrand"],
    "Johannesburg": ["Houston", "Dallas", "Austin"],
     "Mbombela": ["Kamagugu", "Barberton", "San Diego", "Riverside", "valencia park"],
     "Durban": ["Essenwood", "kenville", "Cato manor", "Masgrave", "Bluff", "Glenmore", "kwamashu", "inanda", "Tongaat", "Greyville"]
    
};
        const stateZipInfo = {
            "Makagagu": [1200],
            "Essenwood": [4001],
            "Bridgemead": [6025],
            "kenville": [4051],
            "Homewood": [6001],
            "Cato manor": [4091],
            "Algoa park": [6001],
            "Masgrave": [4001],
            "Barberton": [1300],
            "Bluff": [4052],
            "cotswold": [6045],
            "Glenmore": [4001],
            "Riverside": [1226],
            "Lorraine": [6070],
            "Kwamashu": [4359],
            "inanda": [4309],
            "Struandale": [6001],
            "valencia park": [1201],
            "Tongaat": [4399],
            "Greyville": [4001],
            "Malabar": [6020],
            "Summerstrand": ["6001"]
        };

function populateStates() {
    const countrySelect = document.getElementById("country");
    const stateSelect = document.getElementById("state");
    const citySelect = document.getElementById("city");
    const selectedCountry = countrySelect.value;

    stateSelect.innerHTML = "<option value=''>Select State</option>";
    citySelect.innerHTML = "<option value=''>Select City</option>";

    if (selectedCountry) {
        const states = countryStateInfo[selectedCountry];
        states.forEach(state => {
            const option = document.createElement("option");
            option.value = state;
            option.textContent = state;
            stateSelect.appendChild(option);
        });
    }
}

function populateCities() {
    const stateSelect = document.getElementById("state");
    const citySelect = document.getElementById("city");
    const selectedState = stateSelect.value;

    citySelect.innerHTML = "<option value=''>Select City</option>";

    if (selectedState) {
        const cities = stateCityInfo[selectedState];
        cities.forEach(city => {
            const option = document.createElement("option");
            option.value = city;
            option.textContent = city;
            citySelect.appendChild(option);
        });
    }
}
        function populateZip() {
            const citySelect = document.getElementById("city");
            const zipSelect = document.getElementById("zip");
            const selectedCity = citySelect.value;

            zipSelect.innerHTML = "<option value=''>Select Zip</option>";

            if (selectedCity) {
                const zips = stateZipInfo[selectedCity];
                zips.forEach(zip => {
                    const option = document.createElement("option");
                    option.value = zip;
                    option.textContent = zip;
                    zipSelect.appendChild(option);
                });
            }
        }

   </script>
   </body>
</html>


