@model WIRKDEVELOPER.Models.BookingPatient;
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        @* <link rel="stylesheet" href="~/css/StyleSurgeon3.css"> *@
    </head>
    <body>
    <div class="row">
        <div class=" col-1">
            <a asp-action="BookingPatientList" class=" btn btn-primary  ">List</a>
        </div>
    </div>
    <div class="row" >
        <div class=col>
            <div class=" mt-2 bg-info bg-opacity-50 text-center text-white rounded-1"> ADD NEW Patient</div>
        </div>
    </div>
    <form method="post" asp-action="CreateBookingPatient" class="bg-white bg-opacity-60 border border-3 border-dark">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col border-2">
                <div class="form-group border-2">
                    <label asp-for="BookingPatientName"></label>
                    <div>
                        <input asp-for="BookingPatientName" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="BookingPatientName" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="BookingPatientSurname"></label>
                    <div>
                        <input type="date" asp-for="BookingPatientSurname" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="BookingPatientSurname" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group border-1">
                    <label asp-for="Gender"></label>
                    <div>
                        <input asp-for="Gender" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Gender" class=" text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div id="option">
                    <div class="form-group border-1">
                        <label asp-for="email"></label>
                        <input asp-for="email" type="email" class="form-control" id="Invalid" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="email" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <div>
                        <input type="date" asp-for="Date" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Date" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Time"></label>
                    <div>
                        <input type="time" asp-for="Time" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Time" class=" text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="country"></label>
                    <select id="country" name="" asp-for="country" class=" form-control"  required>
                        <option value="" >select country</option>
                    </select>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="country" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="province"></label>
                    <select id="province" name="" asp-for="province" class=" form-control"  required>
                        <option value="" >select province</option>
                    </select>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="province" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="City"></label>
                    <select id="city" name="" asp-for="City" class=" form-control"  required>
                        <option value="" >select City</option>
                    </select>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="City" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Surbub"></label>
                    <select id="surbub"name="" asp-for="Surbub" class=" form-control" required>
                        <option value="">select Surbub</option>
                    </select>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Surbub" class=" text-danger"></span>
                </div>
            </div>



        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="ContactNumber"></label>
                <div>
                    <input asp-for="ContactNumber" class="form-control" id="InvalidName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="ContactNumber" class=" text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="OperationTheatreID"></label>
                    <div>
                        <input asp-for="OperationTheatreID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="OperationTheatreID" class=" text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="TreatmentID"></label>
                    <div>
                        <input asp-for="TreatmentID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="TreatmentID" class=" text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="MedicalProfessionalID"></label>
                    <div>
                        <input asp-for="MedicalProfessionalID" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="MedicalProfessionalID" class=" text-danger"></span>
                </div>
            </div>

       
        </div>
        <br>
        <div class="row">
            <div class="col">
                <div class=" form-control bg-white bg-opacity-25">
                    <a asp-controller="Surgeon" asp-action="Dashboard">Back</a>

                </div>
            </div>
            <div class="col">
                <div class=" form-control bg-white bg-opacity-25">
                    <input type="submit" class="btn-outline-primary" value="submit" />

                </div>
            </div>

        </div>

    </form>
  
 
    <script src="~/css/JavaScriptCountry.js"></script>
    </body>
</html>


