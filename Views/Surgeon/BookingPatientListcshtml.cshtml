@model IEnumerable<WIRKDEVELOPER.Models.BookingPatient>
@{

    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<div class=" col-10 text-right">
    <a asp-controller="Surgeon" asp-action="CreateBooking" style="width:100%"></a>
</div>
@if (Model.Count() > 0)
{
    <table id="BookingsTable" class=" table table-bordered table-striped table-white">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Gender</th>
                <th>address</th>
                <th>ContactNo</th>
                <th>email</th>
                <th>Time</th>
                <th>date</th>
                <th>Theatre</th>
               <th>treatmentcode</th>
               <th> Anasthesiologist</th>
                <th>Delete</th>
                <th> Update</th>
                <th>book surgery</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {

                <tr>
                    <td>@booking.BookingPatientName</td>
                    <td>@booking.BookingPatientSurname</td>
                    <td>@booking.Gender</td>
                    <td>@booking.province</td>
                    <td>@booking.City</td>
                    <td>@booking.Surbub</td>
                    <td>@booking.ContactNumber</td>
                    <td>@booking.email</td>
                    <td>@booking.Date</td>
                    <td>@booking.Time</td>
                    <td>@booking.OperationTheatre</td>
                    <td>@booking.Treatment</td>
                 <td>@booking.MedicalProfessional</td>
                  

                    <td>
                        <div class="">
                            <a asp-controller="Surgeon" asp-action="UpdateBooking" asp-route-ID="@booking.BookingPatientID" class=" btn btn-blue-300 mx-1">Update</a>
                        </div>
                    </td>
                    <td>
                        <a asp-controller="Surgeon" asp-action="DeleteBooking" asp-route-ID="@booking.BookingPatientID" class=" btn btn-blue-300 mx-1">Delete</a>
                    </td>
                    <td>
                        <button class="edit-btn">select</button>
                    </td>

                </tr>



            }

        </tbody>
    </table>
}
else
{
    <p>NO bookings  has been done</p>
}
