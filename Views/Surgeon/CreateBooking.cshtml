@model WIRKDEVELOPER.Models.BookSurgery

<dv>
    <h6>Add Prescription</h6>
</dv>
<hr />
<form method="post" asp-action="CreateAppointment" class=" form-horizontal   bg-green-300  p-2 text-dark bg-opacity-20">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class=" form-group border-5 border-success">
        <label asp-for="Name"></label>
        <div col-sm-7>
            <input asp-for="Name" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="Name" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="Surname"></label>
        <div col-sm-7>
            <input asp-for="Surname" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="Surname" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="Gender"></label>
        <div col-sm-7>
            <input asp-for="Gender" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="Gender" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="EmailAddress"></label>
        <div col-sm-7>
            <input asp-for="EmailAddress" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="EmailAddress" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="Date"></label>
        <div col-sm-7>
            <input asp-for="Date" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="Date" class=" text-danger"></span>
    </div>
    <div class=" form-group border-5 border-success">
        <label asp-for="Time"></label>
        <div col-sm-7>
            <input asp-for="Time" class=" form-control" id="validationAge" required />
        </div>
        <div class="invalid-feedback">
        </div>
        <span asp-validation-for="Time" class=" text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-8 offset-2 row">
            <div class=" col">
                <input type="submit" class="btn-primary btn-lg  " value="submit" />
            </div>
            <div class=" col-1">
                <a asp-action="PrescriptionList" class=" btn btn-primary btn-lg ">Prescriptions</a>
            </div>
        </div>
    </div>
</form>

