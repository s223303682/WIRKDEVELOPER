@model WIRKDEVELOPER.Models.Booking;
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<div class="row">
    <div class="col">
        <a asp-action="BookingList" class="btn btn-outline-primary">List</a>
    </div>
</div>
<div class="row">

    <div class="col">
        <div class="mt-2 bg-info bg-opacity-50 text-center text-white rounded-1">ADD NEW BOOKING</div>
    </div>
</div>

<form method="post" asp-action="CreateBooking" class="bg-white bg-opacity-60 border border-3 border-dark">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Name"></label>
                <div>
                    <input asp-for="Name" class="form-control" id="Name" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Name" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Surname"></label>
                <div>
                    <input asp-for="Surname" class="form-control" id="InvalidName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Surname" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select id="Dropdown" asp-for="Gender" class=" form-control" id="validation" required>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>

                </select>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Gender" class=" text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="EmailAddress"></label>
                <div>
                    <input type="email" asp-for="EmailAddress" class="form-control" id="InvalidName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="EmailAddress" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Date"></label>
                <div>
                    <input type="date" asp-for="Date" class="form-control" id="InvalidName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Date" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Time"></label>
                <div>
                    <input type="time" asp-for="Time" class="form-control" id="InvalidName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Time" class=" text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
