        <span asp-validation-for="Theatre" class=" text-danger"></span>
        </div>
        </div>
        <div class="col">
        <div class="form-group">
        <label asp-for="TreatmentCode"></label>
        <div>
        <input  asp-for="TreatmentCode" class="form-control" id="InvalidName" required />
        </div>
        <div class="invalid-feedback"></div>
        <span asp-validation-for="TreatmentCode" class=" text-danger"></span>
        </div>
        </div>
        <div class="col">
        <div class="form-group">
        <label asp-for="Anasthesiologist"></label>
        <div>
        <input  asp-for="Anasthesiologist" class="form-control" id="InvalidName" required />
        </div>
        <div class="invalid-feedback"></div>
        <span asp-validation-for="Anasthesiologist" class=" text-danger"></span>
        </div>
        </div>
