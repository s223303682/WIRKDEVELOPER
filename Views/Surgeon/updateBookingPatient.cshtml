            <label asp-for="UserId"></label>
            <select id="PurposeDropdown" asp-for="UserId" class="form-control" asp-items="@ViewBag.getAnaesthesiologist" id="validationName" required>
                <option selected disabled>--select Anaesthesiologists</option>
            </select>
        </div> *@

            <div class=" form-group row">
                <div class="col-6 ">
                    <input type="submit" class="btn btn-info w-75" value="update" />
                </div>
                <div class="col-6">
                    <a asp-action="BookingPatientList" class="btn btn-danger w-75"> Back</a>
                </div>
            </div>

        

    </form>
</div>
