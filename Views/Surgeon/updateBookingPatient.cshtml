@model WIRKDEVELOPER.Models.BookingNewPatient
<h1><div class=" bg-info bg-opacity-50 text-center text-white rounded-1">UPDATE BOOKINGS FOR NEW PATIENTS</div></h1>
<hr />
<div class="container p-3 bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
    <form method="post" asp-action="updateAppointment" class="bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
        <input asp-for="BookingNewPatientID" hidden />
        <div>
            <div class="col">
                <label asp-for="BookingNewPatientName"></label>
                <input asp-for="BookingNewPatientSurname" class="form-control" />
            </div>
            div class="col">
            <label asp-for="BookingNewPatientSurname"></label>
            <input asp-for="BookingNewPatientSurname" class="form-control" />
        </div>
            <div class="col">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" />
            </div>

            <div class="col">
                <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Time"></label>
                <input asp-for="Time" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="OperationTheatreID"></label>
            <select id="PurposeDropdown" asp-for="OperationTheatreID" class="form-control" asp-items="@ViewBag.getOperationTheatre" required>
                <option selected disabled>--select Theatre</option>
            </select>
            </div>
            <div class="col">
                <label asp-for="TreatmentCodeID"></label>
            <select class="form-control" asp-for='TreatmentCodeID' placeholder="treatmentCode" asp-items="@ViewBag.getTreatmentCode" required>
                <option selected disabled>--Select TreatmentCode</option>

            </select>
            </div>
