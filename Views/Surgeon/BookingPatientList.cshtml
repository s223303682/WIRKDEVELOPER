@model IEnumerable<WIRKDEVELOPER.Models.BookingNewPatient>

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="col-10 text-right">
        <h1><a asp-controller="Surgeon" asp-action="CreateBooking" style="width:100%">Creating Booking</a></h1>
    </div>
    <h1><div class="bg-info bg-opacity-50 text-center text-white rounded-1"> BOOKINGS</div></h1>
    <form action="CreatePrescription" method="get">
        @if (Model.Count() > 0)
        {
            <table id="dataTable" class="table table-bordered table-striped table-white">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Theatre</th>
                        <th>Treatment Code</th>
                        <th>Anesthesiologist</th>
                        <th>Delete</th>
                        <th>Update</th>
                        <th>Select</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.Gender</td>
                            <td>@booking.Email</td>
                            <td>@booking.Date</td>
                            <td>@booking.Time</td>
                            <td>@booking.OperationTheatreID</td>
                            <td>@booking.OperationTheatreID</td>
                            <td>@booking.Anaestesiologist</td>
                            <td>
                                <a asp-controller="Surgeon" asp-action="UpdateBooking" asp-route-ID="@booking.BookingNewPatientID" class="btn btn-blue-300 mx-1">Update</a>
                            </td>
                            <td>
                                <a asp-controller="Surgeon" asp-action="DeleteBooking" asp-route-ID="@booking.BookingNewPatientID" class="btn btn-blue-300 mx-1">Delete</a>
                            </td>
                            <td>
                                <a href="/Prescription/CreatePrescription?bookingID=@booking.BookingNewPatientID&name=@booking.Gender&gender=@booking.Gender&email=@booking.Email" class="btn btn-blue-300 mx-1">Create Prescription</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No bookings have been made.</p>
        }
    </form>
</body>
</html>

