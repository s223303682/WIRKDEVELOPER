@model IEnumerable<WIRKDEVELOPER.Models.BookingListViewModel>

@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<h1>Booking Patient List</h1>

<table class="table table-bordered table-striped table-white">
    <thead class="thead-dark">
        <tr>
            
            <th>Name</th>
            <th>Surname</th>
            <th>Id Number</th>
            <th>Email</th>
            <th>Date</th>
            <th>Time</th>
            <th>Province</th>
            <th>City</th>
            <th>Suburb</th>
            <th>Zip</th>
            <th>Operation Theatre</th>
            <th>Anaesthesiologist</th>
            <th>Treatment Codes</th>
            <th>Actions</th> <!-- New column for actions -->
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var booking in Model)
            {
                <tr>
                    
                    <td>@booking.BookingNewPatientName</td>
                    <td>@booking.BookingNewPatientSurname</td>
                    <td>@booking.BookingNewPatientIDNUmber</td>
                    <td>@booking.Email</td>
                    <td>@booking.Date.ToString("yyyy-MM-dd")</td>
                    <td>@booking.Time</td>
                    <td>@booking.Province</td>
                    <td>@booking.City</td>
                    <td>@booking.Suburb</td>
                    <td>@booking.Zip</td>
                    <td>@booking.OperationTheatreName</td>
                    <td>@booking.AnaesthesiologistName</td>
                    <td>
                        @if (booking.TreatmentCodes != null && booking.TreatmentCodes.Any())
                        {
                            <ul>
                                @foreach (var code in booking.TreatmentCodes)
                                {
                                    <li>@code</li>
                                }
                            </ul>
                        }
                    </td>
                    <td>
                        <form asp-controller="Surgeon" asp-action="CreatePrescription" method="get" class="d-inline">
                            <input type="hidden" name="BookingID" value="@booking.BookingNewPatientID" />
                            <input type="hidden" name="IDNumber" value="@booking.BookingNewPatientIDNUmber" />
                            <input type="hidden" name="name" value="@booking.BookingNewPatientName" />
                            <input type="hidden" name="surname" value="@booking.BookingNewPatientSurname" />
                            <input type="hidden" name="gender" value="@booking.Gender" />
                            <input type="hidden" name="email" value="@booking.Email" />
                            <button type="submit" class="btn btn-secondary btn-sm">Add Prescription</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteBooking" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@booking.BookingNewPatientID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this booking?');">Delete</button>
                        </form>
                    </td>
                   
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="14" class="text-center">No bookings available.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateBookingPatient" class="btn btn-primary">Create New Booking</a>
