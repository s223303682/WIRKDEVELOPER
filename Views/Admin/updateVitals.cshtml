@model WIRKDEVELOPER.Models.Vitals
<div class="mt-2 p-2 bg-primary text-center text-white rounded">
    <h6>Update Vitals </h6>

</div>
<hr />
<div class="container p-3 bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
    <form method="post" asp-action="updateOperatingTheatre" class="bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
        <input asp-for="VitalID" hidden />
        <div class="row">

            <div class="col">
                <div class="form-group">
                    <label asp-for="VitalType"></label>
                    <div>
                        <input type="email" asp-for="VitalType" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="VitalType" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Minimumrange"></label>
                    <div>
                        <input type="email" asp-for="Minimumrange" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Minimumrange" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Maximumrange"></label>
                    <div>
                        <input type="email" asp-for="Maximumrange" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Maximumrange" class=" text-danger"></span>
                </div>
            </div>

        </div>


            <div class=" form-group row">
                <div class="col-6 ">
                    <input type="submit" class="btn btn-info w-75" value="update" />
                </div>
                <div class="col-6">
                    <a asp-action="ViewVitals" class="btn btn-danger w-75"> Back</a>
                </div>
            </div>

    </form>
</div>
