@model WIRKDEVELOPER.Models.OperationTheatre
<div class="mt-2 p-2 bg-primary text-center text-white rounded">
    <h6>UPDATE </h6>

</div>
<hr />
<div class="container p-3 bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
    <form method="post" asp-action="updateOperatingTheatre" class="bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
        <input asp-for="TheatreID" hidden />
        <div>
            <div class="col">
                <label asp-for="TheatreName"></label>
                <input asp-for="TheatreName" class="form-control" />
            </div>
           

            <div class=" form-group row">
                <div class="col-6 ">
                    <input type="submit" class="btn btn-info w-75" value="update" />
                </div>
                <div class="col-6">
                    <a asp-action="OperatingTheatreList" class="btn btn-danger w-75"> Back</a>
                </div>
            </div>

        </div>

    </form>
</div>
