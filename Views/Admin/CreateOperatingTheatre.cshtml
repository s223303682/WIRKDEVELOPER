@model WIRKDEVELOPER.Models.OperationTheatre;
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <div class="col">
        <a asp-action="OperatingTheatreList" class="btn btn-outline-primary">List</a>
    </div>
</div>
<div class="row">

    <div class="col">
        <div class="mt-2 bg-info bg-opacity-50 text-center text-white rounded-1">ADD NEW Theatre</div>
    </div>
</div>

<form method="post" asp-action="CreateOperatingTheatre" class="bg-white bg-opacity-60 border border-3 border-dark">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="TheatreName"></label>
                <div>
                    <input asp-for="TheatreName" class="form-control" id="Name" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="TheatreName" class=" text-danger"></span>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col">
            <div class=" form-control bg-white bg-opacity-25">
                <a asp-controller="Admin" asp-action="DashBoard">Back</a>

            </div>
        </div>
        <div class="col">
            <div class=" form-control bg-white bg-opacity-25">
                <input type="submit" class="btn-outline-primary" value="submit" />

            </div>
        </div>

    </div>
</form>
