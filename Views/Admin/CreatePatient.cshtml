@model WIRKDEVELOPER.Models.Patient;
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
    <head></head>
    <body>
    <div class="row">
        <div class="col">
            <a asp-action="BookingList" class="btn btn-outline-primary">List</a>
        </div>
    </div>
    <h1><div class=" bg-info bg-opacity-50 text-center text-white rounded-1">PATIENT PROFILE</div></h1>

    <form method="post" asp-action="CreatePatient" class="bg-white bg-opacity-60 border border-3 border-dark" id="newForm">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">

            <div class="col">
                <div class="form-group">
                    <label asp-for="PatientName"></label>
                    <div>
                        <input type="email" asp-for="PatientName" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="PatientName" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="PatientSurname"></label>
                    <div>
                        <input type="email" asp-for="PatientSurname" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="PatientSurname" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="PatientIDNO"></label>
                    <div>
                        <input type="email" asp-for="PatientIDNO" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="PatientIDNO" class=" text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col">
                <label asp-for="province" for="country">Country:</label>
                <select asp-for="province" id="country" name="country" onchange="populateStates()" class="form-control">
                    <option value="">Select Country</option>
                    <option value="Eastern Cape">Eastern Cape</option>
                    <option value="Western Cape">Western Cape</option>
                    <option value="Gauteng">Gauteng</option>
                    <option value="North West">North West</option>
                    <option value="Kwazulu-Natal">Kwazulu-Natal</option>
                    <option value="Limpopo">Limpopo</option>
                    <option value="Mpumalanga">Mpumalanga</option>
                    <option value="Free State">Free State</option>
                    <option value="Northen Cape">Northen Cape</option>

                </select>
            </div>
            <div class="col">
                <label asp-for="City" for="state">State:</label>
                <select asp-for="City" id="state" name="state" onchange="populateCities()" class="form-control">
                    <option value="">Select State</option>
                </select>
            </div>
            <div class="col">
                <label asp-for="surbub" for="city">City:</label>
                <select asp-for="surbub" id="city" name="city" class="form-control">
                    <option value="">Select City</option>
                </select>
            </div>
            <div class="col">
                <label asp-for="zip" for="zip">Zip:</label>
                <select asp-for="zip" id="zip" name="zip" class="form-control">
                    <option value="">Select zip</option>
                </select>
            </div>


        </div>
        <div class="row">

            <div class="col">
                <div class="form-group">
                    <label asp-for="contactNumber"></label>
                    <div>
                        <input type="text" asp-for="contactNumber" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="contactNumber" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <div>
                        <input type="email" asp-for="EmailAddress" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="EmailAddress" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="DateOfBirth"></label>
                    <div>
                        <input type="date" asp-for="DateOfBirth" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="DateOfBirth" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <select id="Dropdown" asp-for="Gender" class=" form-control" id="validation" required>
                        <option value="" disabled>--select gender</option>
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>

                    </select>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Gender" class=" text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class=" bg-white bg-opacity-25">
                    <a asp-controller="Surgeon" asp-action="DashBoard">Back</a>

                </div>
            </div>
            <div class="col">
                <div class="bg-white bg-opacity-25">
                    <input type="submit" class="btn-outline-primary" value="submit" />

                </div>
            </div>

        </div>
    </form>
    <script>
        const countryStateInfo = {
            "North West": ["Mahikeng", "Stella"],
            "Gauteng": ["Johannesburg", "Pretoria"],
            "Free State": ["Bloemfontein"],
            "Limpopo": ["Polokwana"],
            "Mpumalanga": ["Mbombela"],
            "Northen Cape": ["Kimberly"],
            "Kwazulu-Natal": ["Durban", " Richards Bay", "Port Shepstone", "Newcastle", "Estcourt", "Ladysmith and Richmond."],
            "Eastern Cape": ["Gqeberha", "Bisho", "Florida"],
            "Western Cape": ["Cape Town"]
        };

        const stateCityInfo = {
            "Gqeberha": ["Bridgemead", "Homewood", "Algoa park", "cotswold", "Lorraine", "Struandale", "Malabar", "Summerstrand"],
            "Johannesburg": ["Houston", "Dallas", "Austin"],
            "Mbombela": ["Kamagugu", "Barberton", "San Diego", "Riverside", "valencia park"],
            "Durban": ["Essenwood", "kenville", "Cato manor", "Masgrave", "Bluff", "Glenmore", "kwamashu", "inanda", "Tongaat", "Greyville"]

        };
        const stateZipInfo = {
            "Makagagu": [1200],
            "Essenwood": [4001],
            "Bridgemead": [6025],
            "kenville": [4051],
            "Homewood": [6001],
            "Cato manor": [4091],
            "Algoa park": [6001],
            "Masgrave": [4001],
            "Barberton": [1300],
            "Bluff": [4052],
            "cotswold": [6045],
            "Glenmore": [4001],
            "Riverside": [1226],
            "Lorraine": [6070],
            "Kwamashu": [4359],
            "inanda": [4309],
            "Struandale": [6001],
            "valencia park": [1201],
            "Tongaat": [4399],
            "Greyville": [4001],
            "Malabar": [6020],
            "Summerstrand": ["6001"]
        };

        function populateStates() {
            const countrySelect = document.getElementById("country");
            const stateSelect = document.getElementById("state");
            const citySelect = document.getElementById("city");
            const selectedCountry = countrySelect.value;

            stateSelect.innerHTML = "<option value=''>Select State</option>";
            citySelect.innerHTML = "<option value=''>Select City</option>";

            if (selectedCountry) {
                const states = countryStateInfo[selectedCountry];
                states.forEach(state => {
                    const option = document.createElement("option");
                    option.value = state;
                    option.textContent = state;
                    stateSelect.appendChild(option);
                });
            }
        }

        function populateCities() {
            const stateSelect = document.getElementById("state");
            const citySelect = document.getElementById("city");
            const selectedState = stateSelect.value;

            citySelect.innerHTML = "<option value=''>Select City</option>";

            if (selectedState) {
                const cities = stateCityInfo[selectedState];
                cities.forEach(city => {
                    const option = document.createElement("option");
                    option.value = city;
                    option.textContent = city;
                    citySelect.appendChild(option);
                });
            }
        }
        function populateZip() {
            const citySelect = document.getElementById("city");
            const zipSelect = document.getElementById("zip");
            const selectedCity = citySelect.value;

            zipSelect.innerHTML = "<option value=''>Select Zip</option>";

            if (selectedCity) {
                const zips = stateZipInfo[selectedCity];
                zips.forEach(zip => {
                    const option = document.createElement("option");
                    option.value = zip;
                    option.textContent = zip;
                    zipSelect.appendChild(option);
                });
            }
        }

    </script>
    </body>
</html>
