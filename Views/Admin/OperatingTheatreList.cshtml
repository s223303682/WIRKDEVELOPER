@model IEnumerable<WIRKDEVELOPER.Models.OperationTheatre>
@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class=" col-10 text-right">
    <a asp-controller="Admin" asp-action="CreateOperatingTheatre" style="width:100%"></a>
</div>
@if (Model.Count() > 0)
{
    <table id="BookingsTable" class=" table table-bordered table-striped table-white">
        <thead>
            <tr>
                <th>Operation Theatre Name</th>
                <th>Delete</th>
                <th> Update</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var Theatre in Model)
            {

                <tr>
                    <td>@Theatre.TheatreName</td>
                    <td>
                        <div class="">
                            <a asp-controller="Admin" asp-action="updateOperatingTheatre" asp-route-ID="@Theatre.TheatreID" class=" btn btn-blue-300 mx-1">Update</a>
                        </div>
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="DeleteOperatingTheatre" asp-route-ID="@Theatre.TheatreID" class=" btn btn-blue-300 mx-1">Delete</a>
                    </td>

                </tr>



            }

        </tbody>
    </table>
}
else
{
    <p>NO records  has been done</p>
}