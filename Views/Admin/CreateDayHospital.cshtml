@model WIRKDEVELOPER.Models.DayHospital;
@{
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<!DOCTYPE html>
<html>
    <head>

    </head>
    <body>
    <div class="row">
        <div class="col">
            <a asp-action="DayHospitalList" class="btn btn-outline-primary">List</a>
        </div>
    </div>
    <div class="mt-2 bg-info bg-opacity-50 text-center text-white rounded-1">ADD NEW DayHospital</div>

    <form method="post" asp-action="CreateDayHospital" class="bg-white bg-opacity-60 border border-3 border-dark">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <div>
                        <input asp-for="Name" class="form-control" id="Name" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="Name" class=" text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group border-1">
                        <label asp-for="Province"></label>
                        <select asp-for="Province" id="province" name="Province" class="form-control" required>
                            <option value="">Select Province</option>
                            <!-- Options will be populated by JavaScript -->
                        </select>
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group border-1">
                        <label asp-for="City"></label>
                        <select asp-for="City" id="city" name="City" class="form-control" required>
                            <option value="">Select City</option>
                            <!-- Options will be populated by JavaScript -->
                        </select>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group border-1">
                        <label asp-for="Suburb"></label>
                        <select asp-for="Suburb" id="suburb" name="Suburb" class="form-control" required>
                            <option value="">Select Suburb</option>
                            <!-- Options will be populated by JavaScript -->
                        </select>
                        <span asp-validation-for="Suburb" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group border-1">
                        <label asp-for="Zip"></label>
                        <input asp-for="Zip" type="text" class="form-control" required />
                        <span asp-validation-for="Zip" class="text-danger"></span>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="ContactNumber"></label>
                    <div>
                        <input type="email" asp-for="ContactNumber" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="ContactNumber" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="emailAddress"></label>
                    <div>
                        <input type="email" asp-for="emailAddress" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="emailAddress" class=" text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="PracticeManager"></label>
                    <div>
                        <input type="text" asp-for="PracticeManager" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="PracticeManager" class=" text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="PhurshaseManagerEmail"></label>
                    <div>
                        <input type="email" asp-for="PhurshaseManagerEmail" class="form-control" id="InvalidName" required />
                    </div>
                    <div class="invalid-feedback"></div>
                    <span asp-validation-for="PhurshaseManagerEmail" class=" text-danger"></span>
                </div>
            </div>

        </div><br>

        <div class="row">
            <div class="col">
                <div class=" form-control bg-white bg-opacity-25">
                    <a asp-controller="Admin" asp-action="Dashboard">Back</a>

                </div>
            </div>
            <div class="col">
                <div class=" form-control bg-white bg-opacity-25">
                    <input type="submit" class="btn-outline-primary" value="submit" />

                </div>
            </div>

        </div>
    </form>
     <script>
    document.addEventListener('DOMContentLoaded', function () {
            const provinces = ['Eastern Cape', 'Western Cape', 'North West','Gauteng','Free State','Limpopo','Northen Cape','Kwazulu-Natal'];
        const cities = {
            'Eastern Cape': ['Gqeberha', 'Bisho'],
            'Western Cape': ['Cape Town'],
            'Northen Cape': ['Kimberly']
            'North West': ['Mahikeng','Stella']
            'Gauteng': ['Johannesburg', 'Pretoria'],
            'Free State': ['Bloemfontein'],
            'Limpopo': ['Polokwana'],
            'Mpumalanga': ['Mbombela'],
            'Kwazulu-Natal': ['Durban', 'Richards Bay', 'Port Shepstone', 'Newcastle', 'Estcourt','Ladysmith and Richmond.']
        };
        const suburbs = {
            'Gqeberha': ['Bridgemead', 'Homewood', 'Algoa park', 'cotswold', 'Lorraine', 'Struandale', 'Malabar', 'Summerstrand'],
            'Johannesburg': ['Houston', 'Dallas', 'Austin'],
            'Mbombela': ["Kamagugu", 'Barberton', 'San Diego', 'Riverside', 'valencia park'],
            'Durban': ['Essenwood', 'kenville', 'Cato manor', 'Masgrave', 'Bluff', 'Glenmore', 'kwamashu', 'inanda', 'Tongaat', 'Greyville']
        };

        const provinceSelect = document.getElementById('province');
        const citySelect = document.getElementById('city');
        const suburbSelect = document.getElementById('suburb');

        // Populate provinces
        provinces.forEach(province => {
            const option = document.createElement('option');
            option.value = province;
            option.textContent = province;
            provinceSelect.appendChild(option);
        });

        // Update cities based on selected province
        provinceSelect.addEventListener('change', function () {
            const selectedProvince = this.value;
            citySelect.innerHTML = '<option value="">Select City</option>'; // Reset cities
            suburbSelect.innerHTML = '<option value="">Select Suburb</option>'; // Reset suburbs

            if (selectedProvince) {
                cities[selectedProvince].forEach(city => {
                    const option = document.createElement('option');
                    option.value = city;
                    option.textContent = city;
                    citySelect.appendChild(option);
                });
            }
        });

        // Update suburbs based on selected city
        citySelect.addEventListener('change', function () {
            const selectedCity = this.value;
            suburbSelect.innerHTML = '<option value="">Select Suburb</option>'; // Reset suburbs

            if (selectedCity) {
                suburbs[selectedCity].forEach(suburb => {
                    const option = document.createElement('option');
                    option.value = suburb;
                    option.textContent = suburb;
                    suburbSelect.appendChild(option);
                });
            }
        });
    });
</script>
    </body>
</html>







