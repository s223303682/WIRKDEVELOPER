@model WIRKDEVELOPER.Models.TreatmentCode
<h1><div class=" bg-info bg-opacity-50 text-center text-white rounded-1">UPDATE TREATMENTCODE</div></h1>
<hr />
<div class="container p-3 bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
    <form method="post" asp-action="updateTreatmentCode" class="bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
        <input asp-for="TreatmentCodeID" hidden />
        <div>
            <div class="col">
                <label asp-for="ICDCODE"></label>
                <input asp-for="ICDCODE" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>

            
            <div class=" form-group row">
                <div class="col-6 ">
                    <input type="submit" class="btn btn-info w-75" value="update" />
                </div>
                <div class="col-6">
                    <a asp-action="TreatmentCodeList" class="btn btn-danger w-75"> Back</a>
                </div>
            </div>

        </div>

    </form>

</div>