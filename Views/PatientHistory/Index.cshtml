@model WIRKDEVELOPER.Models.PatientHistory.PatientHistoryViewModel


<h2 class="patient-history-title">Medical History for @Model.PatientName</h2>


<div class="patient-history-section">
    <h4 class="section-title">Allergies</h4>
    <ul class="section-list">
        @foreach (var allergy in Model.Allergies)
        {
            <li class="list-item">@allergy.ActiveName</li>
        }
    </ul>
</div>

<div class="patient-history-section">
    <h4 class="section-title">Current Conditions</h4>
    <ul class="section-list">
        @foreach (var condition in Model.AnConditions)
        {
            <li class="list-item">@condition.Diagnose</li>
        }
    </ul>
</div>

<div class="patient-history-section">
    <h4 class="section-title">Current Medications</h4>
    <ul class="section-list">
        @foreach (var medication in Model.ChronicMedication)
        {
            <li class="list-item">@medication.ChronicName</li>
        }
    </ul>
</div>

<a onclick="history.back()" class="btn btn-primary back-button">
    <i class="bi bi-plus-circle"></i> BACK
</a>

<style>
    .patient-history-title {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

    .patient-history-section {
        margin-bottom: 15px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .section-title {
        font-size: 20px;
        color: #0056b3;
        margin-bottom: 10px;
    }

    .section-list {
        list-style-type: none;
        padding-left: 0;
    }

    .list-item {
        margin-bottom: 5px;
        font-size: 16px;
    }

    .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        text-decoration: none;
        color: white;
        background-color: #007bff;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .back-button:hover {
            background-color: #0056b3;
        }
</style>



