@model IEnumerable<WIRKDEVELOPER.Models.OrderMedication>

@{
    Layout = "AnaesthesiologistLayout";
}

<h1>Received Medications</h1>

@if (Model == null || !Model.Any())
{
    <p>No medications with status 'Received' found</p>
}
else
{
    <table class="table table-sm table-hover">
        <thead class="table-secondary">
            <tr>
                <th>Patient Name</th>
                <th>Medication(s)</th>
                <th>Notes</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medication in Model)
            {
                <tr>
                    <td>@medication.Order.Addm.PatientName</td>
                    <td>@medication.PharmacyMedication.PharmacyMedicationName</td>

                    <!-- Notes for the medication -->
                    <td>
                        @if (medication.notes != null && medication.notes.Any())
                        {
                            <ul>
                                @foreach (var note in medication.notes)
                                {
                                    <li>@note.NoteText</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No notes available</p>
                        }
                    </td>

                    <!-- Note creation date -->
                    <td>
                        @if (medication.notes != null && medication.notes.Any())
                        {
                            <ul>
                                @foreach (var note in medication.notes)
                                {
                                    <li> @note.CreatedAt.ToString("MM/dd/yyyy")</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No date available</p>
                        }
                    </td>

                    <!-- Action buttons -->
                    <td>
                        @if (medication.notes == null || !medication.notes.Any())
                        {
                            <!-- Show Add Note button if no notes exist -->
                            <a asp-controller="Anaesthesiologist" asp-action="CreateNote" asp-route-orderMedicationID="@medication.OrderMedicationID" class="btn btn-primary">Add Note</a>
                        }
                        else
                        {
                            <!-- Show Update and Delete buttons if notes exist -->
                            <a asp-controller="Anaesthesiologist" asp-action="UpdateNote" asp-route-orderMedicationID="@medication.OrderMedicationID" class="btn btn-info">Update</a>
                            <a asp-controller="Anaesthesiologist" asp-action="DeleteNote" asp-route-orderMedicationID="@medication.OrderMedicationID" class="btn btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

