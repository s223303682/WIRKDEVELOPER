@model IEnumerable<WIRKDEVELOPER.Models.Order>


@if (User.IsInRole("Anaesthesiologist"))
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of your orders</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Anaesthesiologist" asp-action="AnOrder" class="btn btn-primary"><i class="bi bi-plus-circle"></i> ORDER ANESTHETICS</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            @*<table class="table table-bordered table-striped" style="width:100%">*@
            <table class="table table-info table-hover">

                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Patient
                        </th>
                        <th>
                            Medicationordered
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Instruction
                        </th>
                        <th>
                            Urgent
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td width="20%">@order.Date</td>
                            <td width="20%">@order.Patient</td>
                            <td width="20%">@order.Medicationordered</td>
                            <td width="20%">@order.Quantity</td>
                            <td width="20%">@order.Instructions</td>
                            <td width="20%">@order.Urgent</td>
                            <td width="20%">@order.Status</td>

                            <td>
                                <a asp-controller="Anaesthesiologist" asp-action="NewUpdateScreening" asp-route-ID="@order.AnOrderID" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>Update</a>

                                <a asp-controller="Anaesthesiologist" asp-action="DeleteScreen" asp-route-ID="@order.AnOrderID" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i>Delete
                                </a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Screenings created yet</p>
        }

    </div>
}

