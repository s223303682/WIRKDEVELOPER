@model IEnumerable<WIRKDEVELOPER.Models.Admin.AnAllergies>
@{
    Layout = "AnaesthesiologistLayout";
}

@if (User.IsInRole("Anaesthesiologist"))
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of your screenings</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Anaesthesiologist" asp-action="Order" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Back</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            @*<table class="table table-bordered table-striped" style="width:100%">*@
            <table class="table table-info table-hover">

                <thead>
                    <tr>
                        <th>
                            ActiveIngridient
                        </th>
                        <th>
                            Reaction
                        </th>
                        @* <th>
                            Status
                        </th> *@
                      
               
                    </tr>
                </thead>

                <tbody>
                    @foreach (var allergy in Model)
                    {
                        <tr>
                            <td width="20%">@allergy.AnAllergiesID</td>
                            <td width="20%">@allergy.Active.ActiveName</td>
                           
                           @*  <td width="20%">@allergy.Status</td> *@
                      
              

                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Screenings created yet</p>
        }

    </div>
}

