@model WIRKDEVELOPER.Models.NotesOfOrders

@{
    Layout = "AnaesthesiologistLayout";
}

<div class="mx-0 mx-sm-auto">
    <div class="card w-75">
        <div class="card-body">
            <div class="card-header bg-danger">
                <h3 class="card-title text-white mt-2" id="exampleModalLabel">DELETE NOTE</h3>
            </div>

            <h4>Are you sure you want to delete this note?</h4>
            <div>
                <strong>Patient:</strong> @Model.PatientName <br />
                <strong>Medication:</strong> @Model.PharmacyMedicationName <br />
                <strong>Note:</strong> @Model.NoteText
            </div>

            <hr />

            <form asp-action="DeleteNote" method="post">
                <input type="hidden" asp-for="OrderMedicationID" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="ListNotes" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

