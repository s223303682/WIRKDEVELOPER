@model IEnumerable<WIRKDEVELOPER.Models.VitalRanges>

@{
    Layout = "AnaesthesiologistLayout";
}

@if (User.IsInRole("Anaesthesiologist"))
{

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of your screenings</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Anaesthesiologist" asp-action="VitalRanges" class="btn btn-primary"><i class="bi bi-plus-circle"></i> ADD VITALS</a>
            </div>
        </div>
        <br />
        @*  <div class="row pt-4">
    <div class="col-6">
    <h2 class="text-primary">View Patients</h2>
    </div>
    </div>
    <br /> *@
        @if (Model.Count() > 0)
        {

            <table class="table table-info table-hover">

                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Vital
                        </th>
                        <th>
                            Minimumrange
                        </th>
                        <th>
                            Maximumrange
                        </th>
                        <th>
                            Units
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var vital in Model)
                    {
                        <tr>
                            <td width="20%">@vital.Date</td>
                            <td width="20%">@vital.Vital/td>
                            <td width="20%">@vital.Minimumrange</td>
                            <td width="20%">@vital.Maximumrange</td>
                            <td width="20%">@vital.Units</td>


                            <div class="col-6">
                                <h2 class="text-primary">Email Notification Configuration</h2>
                            </div>

                            <td>
                                <a asp-controller="Anaesthesiologist" asp-action="ViewPatientRec" asp-route-ID="@vital.VitalRangeID" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>View Records</a>

                                <a asp-controller="Anaesthesiologist" asp-action="Order" asp-route-ID="@vital.VitalRangeID" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i>Order
                                </a>

                            </td>


                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Appointments created yet</p>
        }

    </div>

}

