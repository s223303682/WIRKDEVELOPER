@model IEnumerable<WIRKDEVELOPER.Models.VitalRanges>

@{
    Layout = "AnaesthesiologistLayout";
}

@if (User.IsInRole("Anaesthesiologist"))
{

    <head>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap4.min.css" />
    </head>
    <div id="Header" class="bg-info container">
        <h2 class="m-1 pt-4 text-center text-white">List of your orders</h2>
    </div>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of vital ranges</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Anaesthesiologist" asp-action="VitalRanges" class="btn btn-primary"><i class="bi bi-plus-circle"></i> ADD VITALS</a>
            </div>
        </div>
        <br />
        @*  <div class="row pt-4">
    <div class="col-6">
    <h2 class="text-primary">View Patients</h2>
    </div>
    </div>
    <br /> *@
        @if (Model.Count() > 0)
        {

            <table class="table table-sm table-hover">

                <thead class="table-secondary">
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Vital
                        </th>
                        <th>
                            Minimumrange
                        </th>
                        <th>
                            Maximumrange
                        </th>
                        <th>
                            Units
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var vital in Model)
                    {
                        <tr>
                            <td width="20%">@vital.Date</td>
                            <td width="20%">@vital.Vital</td>
                            <td width="20%">@vital.Minimumrange</td>
                            <td width="20%">@vital.Maximumrange</td>
                            <td width="20%">@vital.Units</td>


                            <div class="col-6">
                                <h2 class="text-primary">Email Notification Configuration</h2>
                            </div>

                            <td>
                                <a asp-controller="Anaesthesiologist" asp-action="UpdateVitalRanges" asp-route-ID="@vital.VitalRangeID" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>Update</a>

                                <a asp-controller="Anaesthesiologist" asp-action="DeleteVitalRanges" asp-route-ID="@vital.VitalRangeID" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i>Delete
                                </a>

                            </td>


                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No vitals added yet</p>
        }

    </div>

}

