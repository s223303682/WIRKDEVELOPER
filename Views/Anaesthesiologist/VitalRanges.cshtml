@model WIRKDEVELOPER.Models.VitalRanges

<form asp-action="VitalRanges" method="post">
    <div class="form-group">
        <label asp-for="Vital" class="control-label"></label>
        <input asp-for="Vital" class="form-control" />
        <span asp-validation-for="Vital" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Minimumrange" class="control-label"></label>
        <input asp-for="Minimumrange" class="form-control" />
        <span asp-validation-for="Minimumrange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Maximumrange" class="control-label"></label>
        <input asp-for="Maximumrange" class="form-control" />
        <span asp-validation-for="Maximumrange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Units" class="control-label"></label>
        <input asp-for="Units" class="form-control" />
        <span asp-validation-for="Units" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <!-- New Email Input Field -->
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
