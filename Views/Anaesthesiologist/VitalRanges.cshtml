@model WIRKDEVELOPER.Models.VitalRanges

@{
    Layout = "AnaesthesiologistLayout";
}
<div class="mx-0 mx-sm-auto">
    <div class="card w-75">
        <div class="card-body ">
            <div class="card-header bg-primary">

                <h3 class="card-title text-white mt-2" id="exampleModalLabel">VITAL RANGES</h3>
            </div>
            <form method="post" asp-action="VitalRanges">
                <div class="border p-3 #FBD603">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*validation*@

                    <div class="row">

                        <div class="form-group">

                            <div class="col-12">

                                <div class="row">
                                   
                                    <div class="col-md-6">
                                        <h4><label asp-for="Date"></label></h4>
                                        <input asp-for="Date" class="form-control" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                  
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h4><label asp-for="Vital"></label></h4>@*These names come from our properties in the model *@
                                        <input asp-for="Vital" class="form-control box mb-2" type="text" placeholder="type.." />
                                        <span asp-validation-for=" Vital" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h4><label asp-for="Minimumrange"></label></h4>@*These names come from our properties in the model *@
                                            <input asp-for="Minimumrange" class="form-control box mb-2" type="text" placeholder="type..." />
                                            <span asp-validation-for="Minimumrange" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-2">
                                            <h4><label asp-for="Units"></label></h4>@*These names come from our properties in the model *@
                                            <input asp-for="Units" class="form-control box mb-2" type="text" placeholder="type.." />
                                            <span asp-validation-for="Units" class="text-danger"></span>
                                        
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h4><label asp-for="Maximumrange"></label></h4>@*These names come from our properties in the model *@
                                            <input asp-for="Maximumrange" class="form-control box mb-2" type="text" placeholder="type.." />
                                            <span asp-validation-for="Maximumrange" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-2">
                                            <h4><label asp-for="Units"></label></h4>@*These names come from our properties in the model *@
                                            <input asp-for="Units" class="form-control box mb-2" type="text" placeholder="type.." />
                                            <span asp-validation-for="Units" class="text-danger"></span>
                                           @*  <h4><label asp-for="Units"></label></h4>
                                            <select id="PurposeDropdown" asp-for="Units" class="form-control" id="validationName" required>
                                                <option value="Select" class="bg-opacity-50">Select</option>
                                                <option value="bpm">bpm</option>
                                                <option value="mmHg">mmHg</option>
                                                <option value="°C">°C</option>
                                            </select>
                                            <span asp-validation-for="Units" class="text-danger"></span> *@
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group row">
                                        <div class="col-4 offset-9 row">
                                            <div class="col">
                                                <input type="submit" class="btn btn-info w-75 bi bi-arrow-left-circle" value="SAVE" />

                                            </div>
                                          
                                        </div>
                                    </div>
                                </div>                       
                            </div>
                        </div>
                    </div>
                 
            </form>
        </div>
    </div>

</div>

