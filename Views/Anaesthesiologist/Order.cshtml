@model WIRKDEVELOPER.Models.Order

@{
    Layout = "AnaesthesiologistLayout";
}
<div class="mx-0 mx-sm-auto">
    <div class="card w-75">
        <div class="card-body ">
            <div class="card-header bg-primary">

                <h3 class="card-title text-white mt-2" id="exampleModalLabel">ORDER ANESTHETICS</h3>
            </div>
            <form method="post" asp-action="Order">
                <div class="border p-3 #FBD603">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*validation*@

                    <div class="row">

                        <div class="form-group">

                            <div class="col-12">

                                <div class="row">
                                    @*   <div class="form-group">
                                    <label asp-for="PatientID" class="control-label">Choose Patient</label>
                                    <select asp-for="PatientID" class="form-control">
                                    @foreach (ApplicationUser item in ViewBag.Patients)
                                    {
                                    <option value="@item.Id">@item.FirstName @item.LastName</option>
                                    }
                                    </select>
                                    </div> *@
                                    <div class="col-md-6">
                                        <h4><label asp-for="Patient"></label></h4>@*These names come from our properties in the model *@
                                        <input asp-for="Patient" class="form-control box mb-2" type="text" placeholder="select" />
                                        <span asp-validation-for="Patient" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <h4><label asp-for="Date"></label></h4>
                                        <input asp-for="Date" class="form-control" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h4><label asp-for="Medicationordered"></label></h4>@*These names come from our properties in the model *@
                                        <input asp-for="Medicationordered" class="form-control box mb-2" type="text" placeholder="select" />
                                        <span asp-validation-for="Medicationordered" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-2">
                                        <h4><label asp-for="Quantity"></label></h4>
                                        <select id="PurposeDropdown" asp-for="Quantity" class="form-control" id="validationName" required>
                                            <option value="Select" class="bg-opacity-50">Select</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                        </select>
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <h4><label asp-for="Instructions"></label></h4>@*These names come from our properties in the model *@
                                        <input asp-for="Instructions" class="form-control box mb-2" type="text" placeholder="select" />
                                        <span asp-validation-for="Instructions" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-2">
                                        <h4><label asp-for="Urgent"></label></h4>
                                        <select id="PurposeDropdown" asp-for="Urgent" class="form-control" id="validationName" required>
                                            <option value="Select" class="bg-opacity-50">Select</option>
                                            <option value="YES">YES</option>
                                            <option value="NO">NO</option>
                                        </select>
                                        <span asp-validation-for="Urgent" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-2">
                                        <h4><label asp-for="Status"></label></h4>
                                        <select id="PurposeDropdown" asp-for="Status" class="form-control" id="validationName" required>
                                            <option value="Select" class="bg-opacity-50">Select</option>
                                            <option value="Ordered">Ordered</option>
                                            <option value="Received">Recieved</option>
                                            @* <option value="mmHg">mmHg</option>
                                            <option value="°C">°C</option> *@
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>

                                </div>

                            </div>
                            <div>
                                <div class="form-group row">
                                    <div class="col-4 offset-9 row">
                                        <div class="col">
                                            <input type="submit" class="btn btn-info w-75 bi bi-arrow-left-circle" value="ORDER" />
                                        </div>
                                        @*  <div class="col">
                                        <a asp-action="IndexScree" class="btn btn-danger w-75"><i class="bi bi-arrow-left-circle"></i>BACK</a>
                                        </div> *@
                                    </div>
                                </div>
                            </div>




                        </div>
                    </div>
                </div>
                <div class=" row-2">
                    <div class="col-8  row">
                        <div class="col">
                           @*  <input type="submit" class="btn btn-info w-75 bi bi-arrow-left-circle" value="Vital History" /> *@
                            <a asp-action="AnVitals" class="btn btn-info w-75"><i class="bi bi-arrow-left-circle"></i>Vital History</a>
                        </div>
                        <div class="col">
                            <a asp-action="IndexScree" class="btn btn-info w-75"><i class="bi bi-arrow-left-circle"></i>Medical History</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

