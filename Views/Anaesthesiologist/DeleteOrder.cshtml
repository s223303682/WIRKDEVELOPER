@model WIRKDEVELOPER.Models.Order

@{
    Layout = "AnaesthesiologistLayout";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date</dd>

        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Addm.PatientName</dd>

        <dt class="col-sm-2">Medication</dt>
        <dd class="col-sm-10">@Model.PharmacyMedication.PharmacyMedicationName</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Instructions</dt>
        <dd class="col-sm-10">@Model.Instructions</dd>

        <dt class="col-sm-2">Urgent</dt>
        <dd class="col-sm-10">@Model.Urgent</dd>
    </dl>
</div>

<form asp-action="DeleteOrder">
    <input type="hidden" asp-for="AnOrderID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="IndexOrders" class="btn btn-secondary">Cancel</a>
</form>


