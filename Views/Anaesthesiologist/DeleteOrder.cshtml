@model WIRKDEVELOPER.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date
        </dd>
        <dt class="col-sm-2">
            Patient Name
        </dt>
        <dd class="col-sm-10">
            @Model.Addm.PatientName
        </dd>
        <dt class="col-sm-2">
            Urgent
        </dt>
        <dd class="col-sm-10">
            @Model.Urgent
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt>Medications</dt>
        <dd>
            <ul>
                @foreach (var item in Model.OrderMedications)
                {
                    <li>@item.PharmacyMedication.PharmacyMedicationName - @item.Quantity @item.Instructions</li>
                }
            </ul>
        </dd>


    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="AnOrderID" />
    @* <input type="submit" value="Delete" class="btn btn-danger"/> *@
     <button type="submit" class="btn btn-danger">Delete</button>
     <a asp-action="IndexOrders" class="btn btn-secondary">Cancel</a>
</form>

