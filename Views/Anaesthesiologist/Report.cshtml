@model IEnumerable<WIRKDEVELOPER.Models.AnestheticReportViewModel>

<h2>Anesthetic Report</h2>

<p>Date Range: @ViewBag.StartDate.ToShortDateString() – @ViewBag.EndDate.ToShortDateString()</p>
<p>Report Generated: @DateTime.Now.ToShortDateString()</p>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Patient</th>
            <th>Medication</th>
            <th>Qty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date</td>
                <td>@item.PatientName</td>
                <td>@item.MedicationName</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Patients: @Model.Select(r => r.PatientName).Distinct().Count()</h3>

<h2>Summary Per Medicine:</h2>
<table>
    <thead>
        <tr>
            <th>Medicine</th>
            <th>Qty Ordered</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var summary in ViewBag.MedicineSummary)
        {
            <tr>
                <td>@summary.MedicationName</td>
                <td>@summary.QuantityOrdered</td>
            </tr>
        }
    </tbody>
</table>

