@model WIRKDEVELOPER.Models.Order

@{
    Layout = "AnaesthesiologistLayout";
    ViewData["Title"] = "Create Note for Order";
}

<h2>Create Note for Order @Model.AnOrderID</h2>
<br />

@* @{
    ViewBag.Title = "Create Note for Order";
} *@




<form asp-action="CreateNoteForOrder" method="post">

    @* <h3>Are you sure you want to delete this order?</h3> *@

    <div>
        <h4>Order Details</h4>
        <dl class="row">
            <dt class="col-sm-2">
                Order Date
            </dt>
            <dd class="col-sm-10">
                @Model.Date
            </dd>
            <dt class="col-sm-2">
                Patient Name
            </dt>
            <dd class="col-sm-10">
                @Model.Addm.PatientName
            </dd>
            <dt class="col-sm-2">
                Urgent
            </dt>
            <dd class="col-sm-10">
                @Model.Urgent
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Model.Status
            </dd>
            <dt>Medications Ordered</dt>
            <dd>
                <ul>
                    @foreach (var item in Model.OrderMedications)
                    {
                        <li>@item.PharmacyMedication.PharmacyMedicationName - @item.Quantity @item.Instructions</li>
                    }
                </ul>
            </dd>


        </dl>
    </div>



    @* <div class="form-group">
        <label asp-for="AddmID" class="control-label">Patient</label>
        <select asp-for="AddmID" class="form-control" asp-items="@ViewBag.getPatient" id="validationName" required>
            <option selected disabled>--Select patient--</option>
        </select>
        <span asp-validation-for="AddmID" class="text-danger"></span>
    </div> *@

    <div class="form-group">
        <label asp-for="Notes" class="control-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div>
        <!-- Ensure the AnOrderID is passed back -->
        <input type="hidden" asp-for="AnOrderID" />
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>





