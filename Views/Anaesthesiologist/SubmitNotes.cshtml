@model WIRKDEVELOPER.Models.OrderCreate

@{
    Layout = "AnaesthesiologistLayout";
}

<h2>Submit Notes for Medications in Order @Model.AnOrderID</h2>

<form asp-action="SubmitNotes" method="post">
    <input type="hidden" asp-for="AnOrderID" />

    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Medication</th>
                <th>Quantity</th>
                <th>Instructions</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.OrderItems.Count; i++)
            {
                <tr>
                    <td>
                        @Model.OrderItems[i].PharmacyMedication.PharmacyMedicationName
                    </td>
                    <td>
                        @Model.OrderItems[i].Quantity
                    </td>
                    <td>
                        @Model.OrderItems[i].Instructions
                    </td>
                    <td>
                        <textarea asp-for="OrderItems[@i].Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="OrderItems[@i].Notes" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group mt-3">
        <input type="submit" value="Save Notes" class="btn btn-primary" />
        <a asp-action="IndexOrders" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
