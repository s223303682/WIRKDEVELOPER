@model IEnumerable<WIRKDEVELOPER.Models.OrderCreate>

@{
    Layout = "AnaesthesiologistLayout";
}

<h2>Search Results</h2>
<form asp-action="SearchPatient" method="get">
    <input type="text" name="patientName" placeholder="Search Patient" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Any())
{
    <table class="table table-sm table-hover">
        <thead class="table-secondary">
            <tr>
                <th>Date</th>
                <th>Patient</th>
                <th>Medication ordered</th>
                <th>Urgent</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr scope="row">
                    <td>@order.Date</td>
                    <td>@order.Patient.PatientName</td>
                    <td>
                        @if (order.OrderItems != null && order.OrderItems.Any())
                        {
                            <ul>
                                @foreach (var medication in order.OrderItems)
                                {
                                    <li>
                                        @medication.PharmacyMedication.PharmacyMedicationName - Quantity: @medication.Quantity, Instructions: @medication.Instructions
                                    </li>
                                }
                            </ul>
                        }
                    </td>
                    <td>@order.Urgent</td>
                    <td>@order.Status</td>
                    <td>
                        @if (order.OrderItems != null && order.OrderItems.Any())
                        {
                            <ul>
                                @foreach (var medication in order.OrderItems)
                                {
                                    <li>@medication.Notes</li>
                                }
                            </ul>
                        }
                    </td>
                    <td>
                        <a asp-controller="Anaesthesiologist" asp-action="CreateNoteForOrder" asp-route-ID="@order.AnOrderID" class="btn btn-primary">Note</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}

