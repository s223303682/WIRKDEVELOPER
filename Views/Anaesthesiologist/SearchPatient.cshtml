@model IEnumerable<WIRKDEVELOPER.Models.OrderCreate>

@{
    Layout = "AnaesthesiologistLayout";
}

<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap4.min.css" />
</head>
<div id="Header" class="bg-info container">
    <h2 class="m-1 pt-4 text-center text-white">Post-Surgery Notes</h2>
</div>

<h2>Search Results</h2>
<br />
<form asp-action="SearchPatient" method="get">
    <input type="text" name="patientName" placeholder="Search Patient" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br />

@if (Model.Any())
{
    <table class="table table-sm table-hover">
        <thead class="table-secondary">
            <tr>
                <th>Date</th>
                <th>Patient</th>
                <th>Medication ordered</th>
                <th>Urgent</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                @if (order.Status == "Received")
                {
                    <tr scope="row">
                        <td width="20%">@order.Date</td>
                        <td width="20%">@order.Patient.PatientName</td>
                        <td>
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                <ul>
                                    @foreach (var medication in order.OrderItems)
                                    {
                                        <li>
                                            @medication.PharmacyMedication.PharmacyMedicationName - Quantity: @medication.Quantity, Instructions: @medication.Instructions
                                        </li>
                                    }
                                </ul>
                            }
                        </td>
                        <td width="10%">@order.Urgent</td>
                        <td width="10%">@order.Status</td>
                        <td width="20%">
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                <ul>
                                    @foreach (var medication in order.OrderItems)
                                    {
                                        <li>@medication.Notes</li>
                                    }
                                </ul>
                            }
                        </td>
                        <td>
                            <a asp-controller="Anaesthesiologist" asp-action="CreateNoteForOrder" asp-route-ID="@order.AnOrderID" class="btn btn-primary">
                                <i class="bi bi-arrow-repeat"></i> Note
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <p>No Orders received yet</p>
}
<br />

