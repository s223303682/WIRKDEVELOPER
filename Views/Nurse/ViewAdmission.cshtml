@model IEnumerable<WIRKDEVELOPER.Models.Patient>
@{

    Layout = "_NurseLayout";
}
<h1>View Admissions</h1>

<!-- Form to place new orders -->
<form asp-action="AddPatient" asp-controller="Nurse" method="post">
   @*  <div id="Header" class="bg-info">
    <h2 class="m-1 pt-4 text-center text-white">View Admission</h2>
</div> *@
<div class="col-6 text-end">
    <a asp-controller="Nurse" asp-action="AddPatient" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Admit</a>
</div>
<div class="container-fluid bg-white border p-4">
    <table id="myTable" table class="table table-hover  table-sm" style="width:100%">
        <thead class="table-secondary">
            <tr>
                <th>
                    Patient Name
                </th>
                <th>
                    Patient Surname
                </th>
                <th>
                    Ward Name
                </th>
                <th>
                    Contact Number
                </th>
                <th>
                    Email Address
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var ad in Model)
            {
                <tr>

                    <td width="20%">@ad.PatientName</td>
                    <td width="20%">@ad.PatientSurname</td>
                    <td width="20%">@ad.wardName</td>
                    <td width="20%">@ad.contactNumber</td>
                    <td width="20%">@ad.EmailAddress</td>
                    <td width="20%">
                       @*  @ad.MainUser.FirstName
                        @ad.MainUser.LastName *@
                    </td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Nurse" asp-action="ViewAdmission" asp-route-ID="@ad.PatientID" class="btn btn-info mx-1">View</a>
                        </div>
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.4/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.bootstrap4.min.js"></script>
</form>

