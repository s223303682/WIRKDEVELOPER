@model WIRKDEVELOPER.Models.MedicationAdministration
@{
    Layout = "_NurseLayout";
}
<form asp-action="AddmedAdmin" method="post">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
        <div class="form-group row">
            <h2 class="text-black-50 pt-3">Medication Administration</h2>
        </div>
    </div>
    <div class="row"
         <div class="col">
            <div class="form-group">
                <label asp-for="PatientName"></label>
                <div>
                    <input asp-for="PatientName" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="PatientName" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Time"></label>
                <div>
                    <input asp-for="Time" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Time" class=" text-danger"></span>
            </div>
        </div>
         <div class="col">
            <div class="form-group">
                <label asp-for="IssuedDate"></label>
                <div>
                    <input asp-for="IssuedDate" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="IssuedDate" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="MedicationName"></label>
                <div>
                    <input asp-for="MedicationName" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="MedicationName" class=" text-danger"></span>
            </div>
        </div>
         <div class="col">
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <div>
                    <input asp-for="Quantity" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Quantity" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Instructions"></label>
                <div>
                    <input asp-for="Instructions" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Instructions" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="PrescriberName"></label>
                <div>
                    <input asp-for="PrescriberName" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="PrescriberName" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="PrescriberPhone"></label>
                <div>
                    <input asp-for="PrescriberPhone" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="PrescriberPhone" class=" text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Status"></label>
                <div>
                    <input asp-for="Status" class="form-control" id="PatientName" required />
                </div>
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Status" class=" text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="submit" />
            </div>
            <div class="col">
                <a asp-action="AddAdmission" class="btn bn-info w-75">Submit</a>
            </div>
        </div>
    </div>
</form>
